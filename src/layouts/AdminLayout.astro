---
import type { Profile } from '../lib/types';

interface Props {
  title: string;
  user: Profile;
  currentPage?: string;
}

const { title, user, currentPage = '' } = Astro.props;

interface NavigationItem {
  name: string;
  href: string;
  icon: string;
  submenu?: {
    name: string;
    href: string;
    icon: string;
  }[];
}

const navigationItems: NavigationItem[] = [
  {
    name: 'Dashboard',
    href: '/admin',
    icon: ''
  },
  {
    name: 'Catálogo',
    href: '/admin/catalog',
    icon: '',
    submenu: [
      {
        name: 'Casas',
        href: '/admin/catalog/houses',
        icon: ''
      },
      {
        name: 'Fabricantes',
        href: '/admin/catalog/fabricantes',
        icon: ''
      },
      {
        name: 'Servicios',
        href: '/admin/catalog/services',
        icon: ''
      },
      {
        name: 'Decoraciones',
        href: '/admin/catalog/decorations',
        icon: ''
      }
    ]
  },
  {
    name: 'Proveedores',
    href: '/admin/providers',
    icon: ''
  },
  {
    name: 'Contenido',
    href: '/admin/content',
    icon: ''
  },
  {
    name: 'Usuarios',
    href: '/admin/users',
    icon: ''
  },
  {
    name: 'Configuración',
    href: '/admin/settings',
    icon: ''
  }
];

// Add super admin items if user is super admin
const superAdminItems: NavigationItem[] = user.role === 'super_admin' ? [
  {
    name: 'Super Admin',
    href: '/admin/super',
    icon: '',
    submenu: [
      {
        name: 'Panel Principal',
        href: '/admin/super',
        icon: ''
      },
      {
        name: 'Administradores',
        href: '/admin/super/admins',
        icon: ''
      }
    ]
  }
] : [];

const allNavItems = [...navigationItems, ...superAdminItems];
---

<html lang="es">
<head>
  <meta charset="utf-8" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title} - MODTOK Admin</title>
  
  <!-- Tailwind CSS is now handled by the @astrojs/tailwind integration -->
</head>

<body class="bg-gray-50 min-h-screen">
  <!-- Top Navigation -->
  <nav class="bg-white border-b border-gray-200 fixed w-full top-0 z-10">
    <div class="px-6 py-4">
      <div class="flex justify-between items-center">
        <div class="flex items-center space-x-4">
          <h1 class="text-xl font-semibold text-gray-900">MODTOK Admin</h1>
          {user.role === 'super_admin' && (
            <span class="px-2 py-1 text-xs font-medium bg-yellow-100 text-yellow-800 rounded-full">
              Super Admin
            </span>
          )}
        </div>
        
        <div class="flex items-center space-x-4">
          <span class="text-sm text-gray-600">
            Hola, {user.full_name}
          </span>
          <a 
            href="/auth/logout" 
            class="text-sm text-red-600 hover:text-red-800 font-medium"
          >
            Cerrar Sesión
          </a>
        </div>
      </div>
    </div>
  </nav>

  <div class="flex pt-16">
    <!-- Sidebar -->
    <aside class="w-64 bg-white border-r border-gray-200 fixed left-0 top-16 bottom-0 overflow-y-auto">
      <nav class="p-6">
        <ul class="space-y-2">
          {allNavItems.map((item) => (
            <li>
              {item.submenu ? (
                <!-- Super Admin section with submenu -->
                <div>
                  <div class="px-3 py-2 rounded-lg text-sm font-medium text-gray-700 bg-gray-50 border border-gray-200 mb-2">
                    <span>{item.name}</span>
                  </div>
                  <ul class="ml-6 space-y-1">
                    {item.submenu.map((subItem) => (
                      <li>
                        <a 
                          href={subItem.href}
                          class={`block px-3 py-2 rounded-lg text-sm font-medium transition-colors ${
                            currentPage === subItem.href || (subItem.href === '/admin/super' && currentPage.startsWith('/admin/super'))
                              ? 'bg-brand-black' 
                              : 'text-gray-600 hover:bg-gray-100'
                          }`}
                        >
                          <span>{subItem.name}</span>
                        </a>
                      </li>
                    ))}
                  </ul>
                </div>
              ) : (
                <!-- Regular navigation item -->
                <a 
                  href={item.href}
                  class={`block px-3 py-2 rounded-lg text-sm font-medium transition-colors ${
                    currentPage === item.href || (item.href !== '/admin' && currentPage.startsWith(item.href))
                      ? 'bg-brand-black' 
                      : 'text-gray-700 hover:bg-gray-100'
                  }`}
                >
                  <span>{item.name}</span>
                </a>
              )}
            </li>
          ))}
        </ul>
      </nav>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 ml-64 p-6">
      <div class="max-w-7xl mx-auto">
        <div class="mb-6">
          <h1 class="text-2xl font-bold text-gray-900">{title}</h1>
        </div>
        
        <div class="bg-white rounded-lg shadow-sm border border-gray-200">
          <slot />
        </div>
      </div>
    </main>
  </div>
</body>
</html>