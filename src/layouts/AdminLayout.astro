---
import type { Profile } from '../lib/types';

interface Props {
  title: string;
  user: Profile;
  currentPage?: string;
}

const { title, user, currentPage = '' } = Astro.props;

interface NavigationItem {
  name: string;
  href: string;
  icon: string;
  submenu?: {
    name: string;
    href: string;
    icon: string;
  }[];
}

const navigationItems: NavigationItem[] = [
  {
    name: 'Dashboard',
    href: '/admin',
    icon: ''
  },
  {
    name: 'Catálogo',
    href: '/admin/catalog',
    icon: '',
    submenu: [
      {
        name: 'Casas',
        href: '/admin/catalog/houses',
        icon: ''
      },
      {
        name: 'Fabricantes',
        href: '/admin/catalog/fabricantes',
        icon: ''
      },
      {
        name: 'Servicios',
        href: '/admin/catalog/services',
        icon: ''
      }
    ]
  },
  {
    name: 'Proveedores',
    href: '/admin/providers',
    icon: ''
  },
  {
    name: 'Contenido',
    href: '/admin/content',
    icon: ''
  },
  {
    name: 'Usuarios',
    href: '/admin/users',
    icon: ''
  },
  {
    name: 'Configuración',
    href: '/admin/settings',
    icon: ''
  }
];

// Add super admin items if user is super admin
const superAdminItems: NavigationItem[] = user.role === 'super_admin' ? [
  {
    name: 'Super Admin',
    href: '/admin/super',
    icon: '',
    submenu: [
      {
        name: 'Panel Principal',
        href: '/admin/super',
        icon: ''
      },
      {
        name: 'Administradores',
        href: '/admin/super/admins',
        icon: ''
      }
    ]
  }
] : [];

const allNavItems = [...navigationItems, ...superAdminItems];
---

<html lang="es">
<head>
  <meta charset="utf-8" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title} - MODTOK Admin</title>
  
  <!-- Tailwind CSS is now handled by the @astrojs/tailwind integration -->
</head>

<body class="bg-gray-50 min-h-screen font-sans">
  <!-- Sidebar - Cupertino Style -->
  <aside class="fixed left-0 top-0 h-screen w-64 bg-white border-r border-gray-200 overflow-y-auto z-20">
    <!-- Logo Header -->
    <div class="p-6 border-b border-gray-200">
      <a href="/admin" class="flex items-center space-x-3">
        <div class="w-10 h-10 bg-brand-green rounded-lg flex items-center justify-center shadow-apple-sm">
          <span class="text-white font-bold text-xl">M</span>
        </div>
        <div>
          <span class="text-xl font-bold text-gray-900">MODTOK</span>
          <p class="text-xs text-gray-500">Panel Admin</p>
        </div>
      </a>
    </div>

    <!-- Navigation -->
    <nav class="p-4 space-y-1">
      {allNavItems.map((item) => (
        <div>
          {item.submenu ? (
            <!-- Section with submenu -->
            <div class="mb-2">
              <div class="px-4 py-2 text-xs font-semibold text-gray-400 uppercase tracking-wider">
                {item.name}
              </div>
              <ul class="space-y-1">
                {item.submenu.map((subItem) => {
                  const isActive = currentPage === subItem.href ||
                    (subItem.href === '/admin/super' && currentPage.startsWith('/admin/super'));

                  return (
                    <li>
                      <a
                        href={subItem.href}
                        class={`flex items-center space-x-3 px-4 py-3 rounded-lg text-sm font-medium transition-all duration-200 ${
                          isActive
                            ? 'bg-accent-blue text-white shadow-apple-sm'
                            : 'text-gray-600 hover:bg-accent-blue-pale hover:text-accent-blue'
                        }`}
                      >
                        <!-- Heroicon: Shield Check -->
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                        </svg>
                        <span>{subItem.name}</span>
                      </a>
                    </li>
                  );
                })}
              </ul>
            </div>
          ) : (
            <!-- Regular navigation item -->
            <a
              href={item.href}
              class={`flex items-center space-x-3 px-4 py-3 rounded-lg text-sm font-medium transition-all duration-200 ${
                currentPage === item.href || (item.href !== '/admin' && currentPage.startsWith(item.href))
                  ? 'bg-accent-blue text-white shadow-apple-sm'
                  : 'text-gray-600 hover:bg-accent-blue-pale hover:text-accent-blue'
              }`}
            >
              {/* Icons for each menu item - Heroicons */}
              {item.name === 'Dashboard' && (
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                </svg>
              )}
              {item.name === 'Catálogo' && (
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
                </svg>
              )}
              {item.name === 'Proveedores' && (
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                </svg>
              )}
              {item.name === 'Contenido' && (
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
                </svg>
              )}
              {item.name === 'Usuarios' && (
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
                </svg>
              )}
              {item.name === 'Configuración' && (
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
              )}
              <span class="font-medium">{item.name}</span>
            </a>
          )}
        </div>
      ))}
    </nav>

    <!-- User Info at bottom -->
    <div class="absolute bottom-0 left-0 right-0 p-4 border-t border-gray-200 bg-white">
      <div class="flex items-center space-x-3 mb-3">
        <div class="w-10 h-10 bg-gradient-to-br from-accent-blue to-accent-blue-dark rounded-full flex items-center justify-center text-white font-semibold text-sm shadow-apple-sm">
          {user.full_name?.charAt(0) || 'A'}
        </div>
        <div class="flex-1 min-w-0">
          <p class="text-sm font-medium text-gray-900 truncate">{user.full_name}</p>
          <p class="text-xs text-gray-500 truncate">{user.email}</p>
        </div>
      </div>
      <a
        href="/auth/logout"
        class="flex items-center justify-center space-x-2 w-full px-3 py-2 text-sm font-medium text-red-600 hover:bg-red-50 rounded-lg transition-all duration-200"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
        </svg>
        <span>Cerrar Sesión</span>
      </a>
    </div>
  </aside>

  <!-- Main Content Area -->
  <main class="ml-64 min-h-screen bg-gray-50">
    <!-- Header -->
    <header class="sticky top-0 z-10 bg-white border-b border-gray-200 px-8 py-5">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-2xl font-bold text-gray-900">{title}</h1>
          {user.role === 'super_admin' && (
            <div class="mt-1">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-accent-gold/10 text-accent-gold">
                <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
                Super Admin
              </span>
            </div>
          )}
        </div>

        <!-- Quick Actions -->
        <div class="flex items-center space-x-3">
          <button class="p-2 text-gray-400 hover:text-accent-blue hover:bg-accent-blue-pale transition-all duration-200 rounded-lg">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
            </svg>
          </button>
        </div>
      </div>
    </header>

    <!-- Page Content -->
    <div class="p-8">
      <div class="max-w-7xl mx-auto">
        <slot />
      </div>
    </div>
  </main>
</body>
</html>