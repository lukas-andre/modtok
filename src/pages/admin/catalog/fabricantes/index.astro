---
import AdminLayout from '@/layouts/AdminLayout.astro';
import { getAdminAuth, requireAdmin } from '@/lib/auth';
import { createSupabaseClient } from '@/lib/supabase';

const auth = await getAdminAuth(Astro);
const user = requireAdmin(auth);

if (!user) {
  return Astro.redirect('/auth/login?redirect=/admin/catalog/fabricantes');
}

const supabase = createSupabaseClient(Astro);

// Get all manufacturers using Provider minimalista + manufacturer_facets_effective
const { data: fabricantes, error } = await supabase
  .from('manufacturer_facets_effective')
  .select('*')
  .eq('status', 'active')
  .eq('is_manufacturer', true)
  .order('created_at', { ascending: false });

if (error) {
  console.error('Error fetching fabricantes:', error);
}

// Get Chilean regions for filter
const CHILEAN_REGIONS = [
  { code: 'XV', name: 'Arica y Parinacota' },
  { code: 'I', name: 'Tarapacá' },
  { code: 'II', name: 'Antofagasta' },
  { code: 'III', name: 'Atacama' },
  { code: 'IV', name: 'Coquimbo' },
  { code: 'V', name: 'Valparaíso' },
  { code: 'RM', name: 'Metropolitana' },
  { code: 'VI', name: "O'Higgins" },
  { code: 'VII', name: 'Maule' },
  { code: 'XVI', name: 'Ñuble' },
  { code: 'VIII', name: 'Biobío' },
  { code: 'IX', name: 'Araucanía' },
  { code: 'XIV', name: 'Los Ríos' },
  { code: 'X', name: 'Los Lagos' },
  { code: 'XI', name: 'Aisén' },
  { code: 'XII', name: 'Magallanes' }
];
---

<AdminLayout title="Fabricantes" user={user} currentPage="/admin/catalog/fabricantes">
  <div class="space-y-6">
    <!-- Header -->
    <div class="bg-white shadow-sm border-b">
      <div class="px-6 py-4">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-2xl font-bold text-gray-900">Fabricantes</h1>
            <p class="mt-1 text-sm text-gray-500">
              Gestiona fabricantes de casas modulares (Providers con is_manufacturer=true)
            </p>
          </div>
          <div class="flex items-center space-x-3">
            <a
              href="/admin/providers/create"
              class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-accent-blue hover:bg-accent-blue/90"
            >
              <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
              </svg>
              Nuevo Fabricante
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
      <div class="bg-white rounded-lg shadow p-4">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Total</p>
            <p class="text-2xl font-bold text-gray-900">{fabricantes?.length || 0}</p>
          </div>
          <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-4">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Verificados</p>
            <p class="text-2xl font-bold text-green-600">
              {fabricantes?.filter(f => f.has_verified).length || 0}
            </p>
          </div>
          <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center">
            <svg class="w-6 h-6 text-green-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-4">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Solo Declarados</p>
            <p class="text-2xl font-bold text-gray-600">
              {fabricantes?.filter(f => !f.has_verified).length || 0}
            </p>
          </div>
          <div class="w-12 h-12 bg-gray-100 rounded-full flex items-center justify-center">
            <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-4">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Con Casas</p>
            <p class="text-2xl font-bold text-purple-600">
              {fabricantes?.filter(f => f.house_count > 0).length || 0}
            </p>
          </div>
          <div class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
          </div>
        </div>
      </div>
    </div>

    <!-- Filters -->
    <div class="bg-white rounded-lg shadow p-4">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700">Buscar</label>
          <input
            type="text"
            id="searchInput"
            placeholder="Nombre empresa, email..."
            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-accent-blue focus:ring-accent-blue sm:text-sm"
          />
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700">Región HQ</label>
          <select
            id="regionFilter"
            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-accent-blue focus:ring-accent-blue sm:text-sm"
          >
            <option value="">Todas</option>
            {CHILEAN_REGIONS.map(region => (
              <option value={region.code}>{region.name}</option>
            ))}
          </select>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700">Verificación</label>
          <select
            id="verificationFilter"
            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-accent-blue focus:ring-accent-blue sm:text-sm"
          >
            <option value="">Todos</option>
            <option value="verified">Solo Verificados</option>
            <option value="declared">Solo Declarados</option>
          </select>
        </div>
      </div>

      <div class="mt-4 flex items-center justify-between">
        <div class="flex items-center space-x-2">
          <button
            onclick="applyFilters()"
            class="inline-flex items-center px-3 py-1.5 border border-transparent text-sm font-medium rounded text-white bg-accent-blue hover:bg-accent-blue/90"
          >
            Aplicar Filtros
          </button>
          <button
            onclick="clearFilters()"
            class="inline-flex items-center px-3 py-1.5 border border-gray-300 text-sm font-medium rounded text-gray-700 bg-white hover:bg-gray-50"
          >
            Limpiar
          </button>
        </div>

        <div class="text-sm text-gray-500">
          <span id="resultCount">{fabricantes?.length || 0}</span> fabricantes
        </div>
      </div>
    </div>

    <!-- Data Table -->
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200" id="fabricantesTable">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Empresa
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Contacto
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Región HQ
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Cobertura
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Casas
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Verificación
              </th>
              <th scope="col" class="relative px-6 py-3">
                <span class="sr-only">Acciones</span>
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            {fabricantes?.map((fabricante) => (
              <tr class="hover:bg-gray-50 fabricante-row"
                  data-company-name={fabricante.company_name.toLowerCase()}
                  data-email={fabricante.email?.toLowerCase() || ''}
                  data-region={fabricante.hq_region_code || ''}
                  data-verified={fabricante.has_verified ? 'true' : 'false'}>
                <td class="px-6 py-4">
                  <div>
                    <div class="text-sm font-medium text-gray-900">{fabricante.company_name}</div>
                    <div class="text-xs text-gray-500">{fabricante.slug}</div>
                    {fabricante.description && (
                      <div class="text-xs text-gray-400 mt-1 line-clamp-1">
                        {fabricante.description}
                      </div>
                    )}
                  </div>
                </td>
                <td class="px-6 py-4">
                  <div>
                    <div class="text-sm text-gray-900">{fabricante.email}</div>
                    {fabricante.phone && (
                      <div class="text-sm text-gray-500">{fabricante.phone}</div>
                    )}
                    {fabricante.whatsapp && (
                      <div class="text-xs text-green-600">WA: {fabricante.whatsapp}</div>
                    )}
                  </div>
                </td>
                <td class="px-6 py-4 text-sm text-gray-900">
                  <div>
                    <div>{fabricante.hq_region_code || 'N/A'}</div>
                    {fabricante.city && (
                      <div class="text-xs text-gray-500">{fabricante.city}</div>
                    )}
                  </div>
                </td>
                <td class="px-6 py-4">
                  <div class="text-xs text-gray-700">
                    {fabricante.regions && fabricante.regions.length > 0 ? (
                      <span>{fabricante.regions.length} regiones</span>
                    ) : (
                      <span class="text-gray-400">Sin definir</span>
                    )}
                  </div>
                </td>
                <td class="px-6 py-4">
                  <div class="flex flex-col gap-1">
                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-purple-100 text-purple-800">
                      {fabricante.house_count || 0} casas
                    </span>
                    {fabricante.house_premium_count > 0 && (
                      <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-yellow-100 text-yellow-800">
                        {fabricante.house_premium_count} premium
                      </span>
                    )}
                  </div>
                </td>
                <td class="px-6 py-4">
                  {fabricante.has_verified ? (
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                      <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                      </svg>
                      Verificado
                    </span>
                  ) : (
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-700">
                      <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                      </svg>
                      Declarado
                    </span>
                  )}
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <div class="flex items-center justify-end space-x-2">
                    <a
                      href={`/fabricantes/${fabricante.slug}`}
                      target="_blank"
                      class="text-gray-400 hover:text-gray-500"
                      title="Ver en sitio"
                    >
                      <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                      </svg>
                    </a>
                    <a
                      href={`/admin/catalog/houses/create?provider_id=${fabricante.provider_id}`}
                      class="text-green-600 hover:text-green-700"
                      title="Crear modelo"
                    >
                      <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                      </svg>
                    </a>
                    <a
                      href={`/admin/providers/${fabricante.provider_id}/edit`}
                      class="text-accent-blue hover:text-accent-blue/80"
                      title="Editar fabricante"
                    >
                      <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                      </svg>
                    </a>
                  </div>
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>

      {(!fabricantes || fabricantes.length === 0) && (
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No hay fabricantes</h3>
          <p class="mt-1 text-sm text-gray-500">Empiece creando un nuevo proveedor con is_manufacturer=true</p>
          <div class="mt-6">
            <a
              href="/admin/providers/create"
              class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-accent-blue hover:bg-accent-blue/90"
            >
              <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
              </svg>
              Nuevo Fabricante
            </a>
          </div>
        </div>
      )}
    </div>
  </div>

  <script is:inline>
    function applyFilters() {
      const searchTerm = document.getElementById('searchInput').value.toLowerCase();
      const regionFilter = document.getElementById('regionFilter').value;
      const verificationFilter = document.getElementById('verificationFilter').value;

      const rows = document.querySelectorAll('.fabricante-row');
      let visibleCount = 0;

      rows.forEach(row => {
        const companyName = row.getAttribute('data-company-name');
        const email = row.getAttribute('data-email');
        const region = row.getAttribute('data-region');
        const isVerified = row.getAttribute('data-verified') === 'true';

        let show = true;

        // Search filter
        if (searchTerm && !companyName.includes(searchTerm) && !email.includes(searchTerm)) {
          show = false;
        }

        // Region filter
        if (regionFilter && region !== regionFilter) {
          show = false;
        }

        // Verification filter
        if (verificationFilter === 'verified' && !isVerified) {
          show = false;
        } else if (verificationFilter === 'declared' && isVerified) {
          show = false;
        }

        row.style.display = show ? '' : 'none';
        if (show) visibleCount++;
      });

      document.getElementById('resultCount').textContent = visibleCount;
    }

    function clearFilters() {
      document.getElementById('searchInput').value = '';
      document.getElementById('regionFilter').value = '';
      document.getElementById('verificationFilter').value = '';
      applyFilters();
    }

    // Apply filters on input change
    document.getElementById('searchInput')?.addEventListener('input', applyFilters);
    document.getElementById('regionFilter')?.addEventListener('change', applyFilters);
    document.getElementById('verificationFilter')?.addEventListener('change', applyFilters);
  </script>
</AdminLayout>
