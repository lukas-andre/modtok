---
import AdminLayout from '@/layouts/AdminLayout.astro';
import { getAdminAuth, requireAdmin } from '@/lib/auth';

const auth = await getAdminAuth(Astro);
const user = requireAdmin(auth);

if (!user) {
  return Astro.redirect('/auth/login?redirect=/admin/content');
}
---

<AdminLayout title="Gestión de Contenido" user={user} currentPage="/admin/content">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Gestión de Contenido</h1>
      <p class="mt-2 text-gray-600">Administra el contenido del blog de la plataforma MODTOK</p>
    </div>

    <!-- Content Grid -->
    <div class="max-w-2xl">
      <!-- Blog Card -->
      <a
        href="/admin/blog"
        class="group block bg-white rounded-xl border-2 border-gray-200 hover:border-accent-blue hover:shadow-apple-lg hover:-translate-y-1 transition-all duration-200 overflow-hidden"
      >
        <div class="p-8">
          <!-- Icon -->
          <div class="inline-flex items-center justify-center w-16 h-16 rounded-xl bg-gradient-to-br from-accent-blue/10 to-accent-blue/5 mb-4 group-hover:from-accent-blue/20 group-hover:to-accent-blue/10 transition-colors">
            <svg class="w-8 h-8 text-accent-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
            </svg>
          </div>

          <!-- Title & Description -->
          <h2 class="text-2xl font-bold text-gray-900 mb-2 group-hover:text-accent-blue transition-colors">
            Blog
          </h2>
          <p class="text-gray-600 mb-6">
            Administra artículos, guías, tutoriales, noticias, entrevistas y todo el contenido educativo del blog
          </p>

          <!-- Actions -->
          <div class="flex items-center gap-4 text-sm">
            <div class="flex items-center gap-2 text-accent-blue font-semibold">
              <span>Ver blog</span>
              <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </div>
            <span class="text-gray-400">|</span>
            <div class="text-gray-500 hover:text-accent-blue transition-colors" onclick="event.preventDefault(); event.stopPropagation(); window.location.href='/admin/content/blog/create';">
              + Crear post
            </div>
          </div>
        </div>

        <!-- Bottom accent bar -->
        <div class="h-1.5 bg-gradient-to-r from-accent-blue to-accent-blue-light group-hover:h-2 transition-all"></div>
      </a>
    </div>

    <!-- Info Card -->
    <div class="mt-8 max-w-2xl bg-gradient-to-br from-accent-blue-pale to-white border border-accent-blue/20 rounded-xl p-6">
      <div class="flex items-start gap-4">
        <div class="flex-shrink-0">
          <svg class="w-6 h-6 text-accent-blue" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
          </svg>
        </div>
        <div>
          <h3 class="text-lg font-semibold text-gray-900 mb-1">
            Gestión de Contenido del Blog
          </h3>
          <p class="text-gray-600 text-sm leading-relaxed">
            El blog ahora incluye todas las categorías: Tendencias, Guías, Casos de Éxito, Noticias, Tutoriales y Entrevistas.
            Crea y administra todo el contenido desde una sola plataforma unificada.
          </p>
        </div>
      </div>
    </div>
  </div>
</AdminLayout>
