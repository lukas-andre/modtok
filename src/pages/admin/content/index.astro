---
import AdminLayout from '../../../layouts/AdminLayout.astro';
import { getAdminAuth, requireAdmin } from '../../../lib/auth';

// Protect this page - only admins can access
const auth = await getAdminAuth(Astro);
const user = requireAdmin(auth);

if (!user) {
  return Astro.redirect('/auth/login?redirect=/admin/content');
}
---

<AdminLayout title="Gestión de Contenido" user={user} currentPage="/admin/content">
  <div class="p-6">
    <!-- Header -->
    <div class="mb-8">
      <h2 class="text-xl font-semibold text-gray-900">Gestión de Contenido</h2>
      <p class="text-gray-600 mt-1">Administra todo el contenido de la plataforma MODTOK</p>
    </div>

    <!-- Content Types Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
      
      <!-- Houses/Products -->
      <div class="bg-white rounded-lg border border-gray-200 hover:shadow-md transition-shadow">
        <div class="p-6">
          <div class="flex items-center mb-4">
            <div class="p-3 bg-blue-100 rounded-lg">
              <div class="w-8 h-8 text-blue-600 flex items-center justify-center text-lg font-bold">□</div>
            </div>
            <div class="ml-4">
              <h3 class="text-lg font-semibold text-gray-900">Casas y Productos</h3>
              <p class="text-sm text-gray-600">Catálogo de casas modulares</p>
            </div>
          </div>
          <div class="mb-4">
            <div class="text-2xl font-bold text-gray-900">84</div>
            <div class="text-sm text-gray-600">productos totales</div>
          </div>
          <div class="flex space-x-2">
            <a 
              href="/admin/content/houses" 
              class="flex-1 bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors text-center text-sm font-medium"
            >
              Gestionar
            </a>
            <a 
              href="/admin/content/houses/create" 
              class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors text-sm font-medium"
            >
              + Nuevo
            </a>
          </div>
        </div>
      </div>

      <!-- Blog Posts -->
      <div class="bg-white rounded-lg border border-gray-200 hover:shadow-md transition-shadow">
        <div class="p-6">
          <div class="flex items-center mb-4">
            <div class="p-3 bg-green-100 rounded-lg">
              <div class="w-8 h-8 text-green-600 flex items-center justify-center text-lg font-bold">▢</div>
            </div>
            <div class="ml-4">
              <h3 class="text-lg font-semibold text-gray-900">Blog y Noticias</h3>
              <p class="text-sm text-gray-600">Artículos y contenido educativo</p>
            </div>
          </div>
          <div class="mb-4">
            <div class="text-2xl font-bold text-gray-900">23</div>
            <div class="text-sm text-gray-600">artículos publicados</div>
          </div>
          <div class="flex space-x-2">
            <a 
              href="/admin/content/blog" 
              class="flex-1 bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition-colors text-center text-sm font-medium"
            >
              Gestionar
            </a>
            <a 
              href="/admin/content/blog/create" 
              class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors text-sm font-medium"
            >
              + Nuevo
            </a>
          </div>
        </div>
      </div>

      <!-- Hotspots -->
      <div class="bg-white rounded-lg border border-gray-200 hover:shadow-md transition-shadow">
        <div class="p-6">
          <div class="flex items-center mb-4">
            <div class="p-3 bg-purple-100 rounded-lg">
              <div class="w-8 h-8 text-purple-600 flex items-center justify-center text-lg font-bold">◆</div>
            </div>
            <div class="ml-4">
              <h3 class="text-lg font-semibold text-gray-900">Hotspots</h3>
              <p class="text-sm text-gray-600">Ubicaciones destacadas</p>
            </div>
          </div>
          <div class="mb-4">
            <div class="text-2xl font-bold text-gray-900">15</div>
            <div class="text-sm text-gray-600">ubicaciones activas</div>
          </div>
          <div class="flex space-x-2">
            <a 
              href="/admin/content/hotspots" 
              class="flex-1 bg-purple-600 text-white px-4 py-2 rounded-lg hover:bg-purple-700 transition-colors text-center text-sm font-medium"
            >
              Gestionar
            </a>
            <a 
              href="/admin/content/hotspots/create" 
              class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors text-sm font-medium"
            >
              + Nuevo
            </a>
          </div>
        </div>
      </div>

      <!-- Static Pages -->
      <div class="bg-white rounded-lg border border-gray-200 hover:shadow-md transition-shadow">
        <div class="p-6">
          <div class="flex items-center mb-4">
            <div class="p-3 bg-yellow-100 rounded-lg">
              <div class="w-8 h-8 text-yellow-600 flex items-center justify-center text-lg font-bold">▣</div>
            </div>
            <div class="ml-4">
              <h3 class="text-lg font-semibold text-gray-900">Páginas Estáticas</h3>
              <p class="text-sm text-gray-600">Páginas informativas</p>
            </div>
          </div>
          <div class="mb-4">
            <div class="text-2xl font-bold text-gray-900">8</div>
            <div class="text-sm text-gray-600">páginas configuradas</div>
          </div>
          <div class="flex space-x-2">
            <a 
              href="/admin/content/pages" 
              class="flex-1 bg-yellow-600 text-white px-4 py-2 rounded-lg hover:bg-yellow-700 transition-colors text-center text-sm font-medium"
            >
              Gestionar
            </a>
            <a 
              href="/admin/content/pages/create" 
              class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors text-sm font-medium"
            >
              + Nueva
            </a>
          </div>
        </div>
      </div>

      <!-- Media Library -->
      <div class="bg-white rounded-lg border border-gray-200 hover:shadow-md transition-shadow">
        <div class="p-6">
          <div class="flex items-center mb-4">
            <div class="p-3 bg-red-100 rounded-lg">
              <div class="w-8 h-8 text-red-600 flex items-center justify-center text-lg font-bold">○</div>
            </div>
            <div class="ml-4">
              <h3 class="text-lg font-semibold text-gray-900">Biblioteca de Medios</h3>
              <p class="text-sm text-gray-600">Imágenes y archivos</p>
            </div>
          </div>
          <div class="mb-4">
            <div class="text-2xl font-bold text-gray-900">342</div>
            <div class="text-sm text-gray-600">archivos totales</div>
          </div>
          <div class="flex space-x-2">
            <a 
              href="/admin/content/media" 
              class="flex-1 bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700 transition-colors text-center text-sm font-medium"
            >
              Gestionar
            </a>
            <button 
              onclick="document.getElementById('mediaUpload').click()" 
              class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors text-sm font-medium"
            >
              + Subir
            </button>
            <input type="file" id="mediaUpload" class="hidden" accept="image/*,video/*" multiple>
          </div>
        </div>
      </div>

      <!-- SEO Management -->
      <div class="bg-white rounded-lg border border-gray-200 hover:shadow-md transition-shadow">
        <div class="p-6">
          <div class="flex items-center mb-4">
            <div class="p-3 bg-indigo-100 rounded-lg">
              <div class="w-8 h-8 text-indigo-600 flex items-center justify-center text-lg font-bold">◈</div>
            </div>
            <div class="ml-4">
              <h3 class="text-lg font-semibold text-gray-900">SEO y Meta Tags</h3>
              <p class="text-sm text-gray-600">Optimización para motores</p>
            </div>
          </div>
          <div class="mb-4">
            <div class="text-2xl font-bold text-gray-900">95%</div>
            <div class="text-sm text-gray-600">puntuación SEO</div>
          </div>
          <div class="flex space-x-2">
            <a 
              href="/admin/content/seo" 
              class="flex-1 bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700 transition-colors text-center text-sm font-medium"
            >
              Gestionar
            </a>
            <a 
              href="/admin/content/seo/audit" 
              class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors text-sm font-medium"
            >
              Auditar
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Recent Content Activity -->
    <div class="bg-white rounded-lg border border-gray-200">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900">Actividad Reciente del Contenido</h3>
      </div>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tipo</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Título</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Estado</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Autor</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fecha</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200" id="recent-content">
            <!-- Content will be loaded here -->
            <tr>
              <td colspan="6" class="px-6 py-4 text-center text-gray-500">
                Cargando contenido reciente...
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</AdminLayout>

