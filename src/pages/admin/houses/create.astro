---
import AdminLayout from '../../../layouts/AdminLayout.astro';
import { getAdminAuth, requireAdmin } from '../../../lib/auth';
import HouseForm from '../../../components/admin/HouseForm';

const auth = await getAdminAuth(Astro);
const user = requireAdmin(auth);

if (!user) {
  return Astro.redirect('/auth/login?redirect=/admin/houses/create');
}
---

<AdminLayout title="Crear Casa" user={user} currentPage="/admin/houses">
  <div class="p-6">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center space-x-4 mb-4">
        <a
          href="/admin/houses"
          class="text-gray-600 hover:text-gray-900 flex items-center"
        >
          <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
          Volver a Casas
        </a>
      </div>
      <h2 class="text-2xl font-bold text-gray-900">Crear Nueva Casa</h2>
      <p class="text-gray-600 mt-2">
        Registra un nuevo modelo de casa modular en el catálogo
      </p>
    </div>

    <!-- Info Box -->
    <div class="mb-6 p-4 bg-blue-50 border border-blue-200 rounded-lg">
      <div class="flex items-start">
        <svg class="w-5 h-5 text-blue-400 mt-0.5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <div>
          <p class="text-blue-800 font-medium">Solo Fabricantes</p>
          <p class="text-blue-700 text-sm mt-1">
            Las casas solo pueden asignarse a providers con el servicio "Fabricante" activo. Si no encuentras un fabricante, puedes crearlo rápidamente desde el formulario.
          </p>
        </div>
      </div>
    </div>

    <!-- Form Component -->
    <HouseForm
      client:load
      mode="create"
    />
  </div>
</AdminLayout>
