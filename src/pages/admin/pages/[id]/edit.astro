---
import AdminLayout from '@/layouts/AdminLayout.astro';
import { getAdminAuth, requireAdmin } from '@/lib/auth';
import { createSupabaseClient } from '@/lib/supabase';

const auth = await getAdminAuth(Astro);
const user = requireAdmin(auth);

if (!user) {
  return Astro.redirect('/auth/login?redirect=/admin/pages');
}

const { id } = Astro.params;

if (!id) {
  return Astro.redirect('/admin/pages');
}

const supabase = createSupabaseClient(Astro);

// Fetch the page
const { data: page, error } = await supabase
  .from('static_pages')
  .select('*')
  .eq('id', id)
  .single();

if (error || !page) {
  console.error('Error fetching page:', error);
  return Astro.redirect('/admin/pages');
}

const pageTypeLabels = {
  about_us: 'Acerca de Nosotros',
  terms_conditions: 'T√©rminos y Condiciones',
  privacy_policy: 'Pol√≠tica de Privacidad',
  faq: 'Preguntas Frecuentes',
  contact: 'Contacto',
  landing_section: 'Secci√≥n Landing'
};
---

<AdminLayout title={`Editar: ${page.title}`} user={user}>
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-2xl font-bold text-gray-900">Editar P√°gina</h1>
          <p class="mt-1 text-sm text-gray-500">
            {pageTypeLabels[page.type]} - {page.slug}
          </p>
        </div>
        <div class="flex space-x-2">
          <a
            href="/admin/pages"
            class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50"
          >
            <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Volver al listado
          </a>
          {page.status === 'published' && (
            <a
              href={`/${page.slug}`}
              target="_blank"
              class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50"
            >
              <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
              Ver p√°gina
            </a>
          )}
        </div>
      </div>
    </div>

    <form id="pageForm" class="space-y-8">
      <!-- Basic Information -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-medium text-gray-900">Informaci√≥n B√°sica</h2>
        </div>
        <div class="px-6 py-4 space-y-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700">
                T√≠tulo <span class="text-red-500">*</span>
              </label>
              <input
                type="text"
                name="title"
                id="title"
                required
                value={page.title}
                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm"
              />
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700">
                Slug URL
              </label>
              <input
                type="text"
                name="slug"
                id="slug"
                value={page.slug}
                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm"
                readonly={page.is_system_page}
              />
              {page.is_system_page && (
                <p class="mt-1 text-xs text-gray-500">El slug de p√°ginas del sistema no se puede modificar</p>
              )}
            </div>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700">
              Resumen/Extracto
            </label>
            <textarea
              name="excerpt"
              rows="3"
              class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm"
              placeholder="Breve descripci√≥n de la p√°gina..."
            >{page.excerpt || ''}</textarea>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700">
              Estado
            </label>
            <select
              name="status"
              class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm"
            >
              <option value="draft" selected={page.status === 'draft'}>Borrador</option>
              <option value="published" selected={page.status === 'published'}>Publicado</option>
              <option value="archived" selected={page.status === 'archived'}>Archivado</option>
            </select>
          </div>
        </div>
      </div>

      <!-- Content -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-medium text-gray-900">Contenido</h2>
        </div>
        <div class="px-6 py-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-3">
              Contenido Principal
            </label>

            <!-- Rich Text Editor Placeholder -->
            <div class="border border-gray-300 rounded-md">
              <div class="border-b border-gray-200 px-3 py-2 bg-gray-50">
                <div class="flex space-x-2">
                  <button type="button" class="p-1 text-gray-600 hover:text-gray-900 rounded" title="Negrita">
                    <strong>B</strong>
                  </button>
                  <button type="button" class="p-1 text-gray-600 hover:text-gray-900 rounded" title="Cursiva">
                    <em>I</em>
                  </button>
                  <button type="button" class="p-1 text-gray-600 hover:text-gray-900 rounded" title="Enlaces">
                    üîó
                  </button>
                  <button type="button" class="p-1 text-gray-600 hover:text-gray-900 rounded" title="Lista">
                    üìù
                  </button>
                  <button type="button" class="p-1 text-gray-600 hover:text-gray-900 rounded" title="Imagen">
                    üñºÔ∏è
                  </button>
                </div>
              </div>
              <textarea
                name="content"
                id="content"
                rows="20"
                class="block w-full border-0 focus:ring-0 focus:border-transparent resize-none"
                placeholder="Escribe el contenido de la p√°gina aqu√≠..."
              >{page.content || ''}</textarea>
            </div>
            <p class="mt-2 text-xs text-gray-500">
              Editor de texto enriquecido - funcionalidad completa pr√≥ximamente
            </p>
          </div>
        </div>
      </div>

      <!-- Featured Image -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-medium text-gray-900">Imagen Destacada</h2>
        </div>
        <div class="px-6 py-4">
          <div>
            <label class="block text-sm font-medium text-gray-700">
              URL de Imagen Destacada
            </label>
            <input
              type="url"
              name="featured_image_url"
              value={page.featured_image_url || ''}
              class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm"
              placeholder="https://ejemplo.com/imagen.jpg"
            />
          </div>

          {page.featured_image_url && (
            <div class="mt-4">
              <img
                src={page.featured_image_url}
                alt="Imagen destacada"
                class="max-w-xs rounded-lg shadow-sm"
                onerror="this.style.display='none'"
              />
            </div>
          )}
        </div>
      </div>

      <!-- SEO -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-medium text-gray-900">SEO</h2>
        </div>
        <div class="px-6 py-4 space-y-6">
          <div>
            <label class="block text-sm font-medium text-gray-700">
              Meta T√≠tulo
            </label>
            <input
              type="text"
              name="meta_title"
              maxlength="60"
              value={page.meta_title || ''}
              class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm"
              placeholder="T√≠tulo para SEO (m√°x. 60 caracteres)"
            />
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700">
              Meta Descripci√≥n
            </label>
            <textarea
              name="meta_description"
              rows="3"
              maxlength="160"
              class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm"
              placeholder="Descripci√≥n para SEO (m√°x. 160 caracteres)"
            >{page.meta_description || ''}</textarea>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700">
              Palabras Clave
            </label>
            <input
              type="text"
              name="keywords"
              value={page.keywords?.join(', ') || ''}
              class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm"
              placeholder="palabra1, palabra2, palabra3"
            />
            <p class="mt-1 text-xs text-gray-500">Separar palabras clave con comas</p>
          </div>
        </div>
      </div>

      <!-- Form Actions -->
      <div class="flex justify-end space-x-4">
        <a
          href="/admin/pages"
          class="px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
        >
          Cancelar
        </a>
        <button
          type="button"
          id="previewBtn"
          class="px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
        >
          Vista Previa
        </button>
        <button
          type="submit"
          class="px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
        >
          Guardar Cambios
        </button>
      </div>
    </form>
  </div>
</AdminLayout>

<script is:inline>
  // Auto-generate slug from title (only for non-system pages)
  const titleInput = document.getElementById('title');
  const slugInput = document.getElementById('slug');
  const isSystemPage = slugInput && slugInput.hasAttribute('readonly');

  if (!isSystemPage && titleInput && slugInput) {
    titleInput.addEventListener('input', function() {
      const title = this.value;
      const slug = title
        .toLowerCase()
        .replace(/[√°√†√§√¢√£]/g, 'a')
        .replace(/[√©√®√´√™]/g, 'e')
        .replace(/[√≠√¨√Ø√Æ]/g, 'i')
        .replace(/[√≥√≤√∂√¥√µ]/g, 'o')
        .replace(/[√∫√π√º√ª]/g, 'u')
        .replace(/[√±]/g, 'n')
        .replace(/[^a-z0-9]+/g, '-')
        .replace(/^-+|-+$/g, '');

      slugInput.value = slug;
    });
  }

  // Handle form submission
  const pageForm = document.getElementById('pageForm');
  if (pageForm) {
    pageForm.addEventListener('submit', async function(e) {
      e.preventDefault();

      const formData = new FormData(this);
      const data = {};

      // Convert FormData to regular object
      for (const [key, value] of formData.entries()) {
        data[key] = value;
      }

      // Parse keywords
      if (data.keywords && typeof data.keywords === 'string') {
        data.keywords = data.keywords.split(',').map(function(k) { return k.trim(); }).filter(function(k) { return k; });
      }

      try {
        const pathParts = window.location.pathname.split('/');
        const id = pathParts[pathParts.length - 2]; // Get ID from URL path
        const response = await fetch('/api/admin/pages/' + id, {
          method: 'PUT',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(data),
        });

        if (response.ok) {
          const result = await response.json();

          // Show success message
          const successDiv = document.createElement('div');
          successDiv.className = 'fixed top-4 right-4 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded z-50';
          successDiv.textContent = 'P√°gina actualizada correctamente';
          document.body.appendChild(successDiv);

          setTimeout(function() {
            successDiv.remove();
          }, 3000);

          // Update URL if slug changed
          if (result.page.slug !== window.location.pathname.split('/').pop()) {
            window.history.replaceState({}, '', '/admin/pages/' + result.page.id + '/edit');
          }
        } else {
          const error = await response.json();
          alert('Error: ' + error.error);
        }
      } catch (error) {
        console.error('Error:', error);
        alert('Error al actualizar la p√°gina');
      }
    });
  }

  // Preview functionality (placeholder)
  const previewBtn = document.getElementById('previewBtn');
  if (previewBtn) {
    previewBtn.addEventListener('click', function() {
      alert('Funcionalidad de vista previa pr√≥ximamente');
    });
  }
</script>