---
import AdminLayout from '@/layouts/AdminLayout.astro';
import UserForm from '@/components/admin/forms/UserForm';
import { getAdminAuth, requireAdmin } from '@/lib/auth';

const auth = await getAdminAuth(Astro);
const user = requireAdmin(auth);

if (!user) {
  return Astro.redirect('/auth/login?redirect=/admin/users/create');
}

// Only super_admin can create users
if (user.role !== 'super_admin') {
  return Astro.redirect('/admin/users?error=unauthorized');
}
---

<AdminLayout title="Nuevo Usuario" user={user} currentPage="/admin/users">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="flex items-center justify-between mb-8">
      <div>
        <h1 class="text-2xl font-bold text-gray-900">Nuevo Usuario</h1>
        <p class="mt-1 text-sm text-gray-500">
          Crear un nuevo usuario en la plataforma
        </p>
      </div>
      <a
        href="/admin/users"
        class="inline-flex items-center gap-2 px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 hover:border-accent-blue transition-all duration-200"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Volver al listado
      </a>
    </div>

    <!-- React Form Component -->
    <UserForm
      client:load
      mode="create"
    />
  </div>
</AdminLayout>
