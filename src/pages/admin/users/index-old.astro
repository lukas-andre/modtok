      const inactiveUsers = document.getElementById('inactive-users');
      
      if (totalUsers) totalUsers.textContent = '156';
      if (activeUsers) activeUsers.textContent = '142';
      if (newUsers) newUsers.textContent = '12';
      if (inactiveUsers) inactiveUsers.textContent = '14';

      // Load users list (placeholder data)
      const usersTable = document.getElementById('users-table');
      if (usersTable) {
        usersTable.innerHTML = `
        <tr>
          <td class="px-6 py-4 whitespace-nowrap">
