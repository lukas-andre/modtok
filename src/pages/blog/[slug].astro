---
import { createSupabaseClient } from '../../lib/supabase';
import BaseLayout from '../../layouts/BaseLayout.astro';

const { slug } = Astro.params;

if (!slug) {
  return Astro.redirect('/blog');
}

// Fetch the blog post
const supabase = createSupabaseClient(Astro);
const { data: post, error } = await supabase
  .from('blog_posts')
  .select(`
    *,
    author:profiles!blog_posts_author_id_fkey(full_name, avatar_url, bio)
  `)
  .eq('slug', slug)
  .eq('status', 'published')
  .lte('published_at', new Date().toISOString())
  .single();

if (error || !post) {
  return Astro.redirect('/blog?error=not_found');
}

// Increment view count
await supabase
  .from('blog_posts')
  .update({ views_count: (post.views_count || 0) + 1 })
  .eq('id', post.id);

// Fetch related posts
const { data: relatedPosts } = await supabase
  .from('blog_posts')
  .select('id, title, slug, excerpt, featured_image_url, published_at, reading_time_minutes, category')
  .eq('status', 'published')
  .neq('id', post.id)
  .or(`category.eq.${post.category},tags.cs.{${post.tags?.slice(0, 3).map(t => `"${t}"`).join(',') || ''}}`)
  .order('published_at', { ascending: false })
  .limit(3);

// Categories for navigation
const categories = {
  'tendencias': { name: 'Tendencias', color: 'purple' },
  'guias': { name: 'Guías', color: 'blue' },
  'casos_exito': { name: 'Casos de Éxito', color: 'green' },
  'noticias': { name: 'Noticias', color: 'red' },
  'tutoriales': { name: 'Tutoriales', color: 'orange' }
};

// SEO optimization for Chile market
const seoTitle = post.meta_title || `${post.title} | Blog MODTOK Chile`;
const seoDescription = post.meta_description || post.excerpt || `${post.title} - Artículo especializado en construcción modular en Chile`;
const seoKeywords = post.keywords?.join(', ') || 'construcción modular Chile, casas prefabricadas, vivienda modular';
const canonicalUrl = `https://modtok.cl/blog/${post.slug}`;

// Calculate estimated reading time
const readingTime = post.reading_time_minutes || 
  Math.max(1, Math.round(post.content.replace(/<[^>]*>/g, '').split(/\s+/).length / 200));

// Format published date for Chile
const publishedDate = new Date(post.published_at!);
const formattedDate = publishedDate.toLocaleDateString('es-CL', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<BaseLayout 
  title={seoTitle}
  description={seoDescription}
  image={post.featured_image_url || undefined}
>
  <!-- Breadcrumb -->
  <nav class="bg-gray-50 border-b border-gray-200 py-4">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center space-x-2 text-sm">
        <a href="/" class="text-gray-500 hover:text-blue-600">Inicio</a>
        <span class="text-gray-400">/</span>
        <a href="/blog" class="text-gray-500 hover:text-blue-600">Blog</a>
        {post.category && (
          <>
            <span class="text-gray-400">/</span>
            <a 
              href={`/blog/categoria/${post.category}`} 
              class="text-gray-500 hover:text-blue-600 capitalize"
            >
              {categories[post.category]?.name || post.category}
            </a>
          </>
        )}
        <span class="text-gray-400">/</span>
        <span class="text-gray-900 font-medium truncate">{post.title}</span>
      </div>
    </div>
  </nav>

  <main class="min-h-screen bg-white">
    <!-- Article Header -->
    <header class="bg-white py-8 lg:py-16">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <!-- Category Badge -->
          {post.category && (
            <div class="mb-6">
              <span class={`inline-flex items-center px-3 py-1 rounded-full text-sm font-medium ${
                categories[post.category]?.color === 'blue' ? 'bg-blue-100 text-blue-800' :
                categories[post.category]?.color === 'green' ? 'bg-green-100 text-green-800' :
                categories[post.category]?.color === 'purple' ? 'bg-purple-100 text-purple-800' :
                categories[post.category]?.color === 'red' ? 'bg-red-100 text-red-800' :
                categories[post.category]?.color === 'orange' ? 'bg-orange-100 text-orange-800' :
                'bg-gray-100 text-gray-800'
              }`}>
                {categories[post.category]?.name || post.category}
              </span>
            </div>
          )}

          <!-- Title -->
          <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-6 leading-tight">
            {post.title}
          </h1>

          <!-- Excerpt -->
          {post.excerpt && (
            <p class="text-xl text-gray-600 mb-8 leading-relaxed max-w-3xl mx-auto">
              {post.excerpt}
            </p>
          )}

          <!-- Meta Information -->
          <div class="flex flex-col sm:flex-row items-center justify-center space-y-4 sm:space-y-0 sm:space-x-6 text-gray-500">
            <div class="flex items-center space-x-3">
              {post.author?.avatar_url ? (
                <img 
                  src={post.author.avatar_url} 
                  alt={post.author.full_name}
                  class="w-12 h-12 rounded-full border-2 border-gray-200"
                >
              ) : (
                <div class="w-12 h-12 bg-blue-500 rounded-full flex items-center justify-center text-white font-semibold">
                  {post.author?.full_name?.charAt(0) || 'M'}
                </div>
              )}
              <div class="text-left">
                <p class="font-medium text-gray-900">{post.author?.full_name || 'Equipo MODTOK'}</p>
                <p class="text-sm text-gray-500">Autor</p>
              </div>
            </div>

            <div class="flex items-center space-x-4 text-sm">
              <div class="flex items-center space-x-1">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <time datetime={publishedDate.toISOString()}>{formattedDate}</time>
              </div>
              <div class="flex items-center space-x-1">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span>{readingTime} min lectura</span>
              </div>
              <div class="flex items-center space-x-1">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                </svg>
                <span>{(post.views_count || 0) + 1} vistas</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Featured Image -->
    {post.featured_image_url && (
      <section class="mb-8 lg:mb-12">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="aspect-w-16 aspect-h-9 lg:aspect-h-6">
            <img 
              src={post.featured_image_url} 
              alt={post.title}
              class="w-full h-96 lg:h-[500px] object-cover rounded-xl shadow-lg"
            >
          </div>
        </div>
      </section>
    )}

    <!-- Article Content -->
    <article class="prose prose-lg max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 mb-12">
      <!-- Social Share Buttons -->
      <div class="not-prose flex items-center justify-between border-y border-gray-200 py-4 mb-8">
        <div class="flex items-center space-x-4">
          <span class="text-sm font-medium text-gray-700">Compartir:</span>
          <div class="flex space-x-2">
            <button 
              onclick="shareOnFacebook()"
              class="p-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors"
              aria-label="Compartir en Facebook"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </button>
            <button 
              onclick="shareOnTwitter()"
              class="p-2 bg-blue-400 text-white rounded-lg hover:bg-blue-500 transition-colors"
              aria-label="Compartir en Twitter"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
              </svg>
            </button>
            <button 
              onclick="shareOnLinkedIn()"
              class="p-2 bg-blue-700 text-white rounded-lg hover:bg-blue-800 transition-colors"
              aria-label="Compartir en LinkedIn"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </button>
            <button 
              onclick="shareOnWhatsApp()"
              class="p-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors"
              aria-label="Compartir en WhatsApp"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.89 3.488"/>
              </svg>
            </button>
            <button 
              onclick="copyToClipboard()"
              class="p-2 bg-gray-600 text-white rounded-lg hover:bg-gray-700 transition-colors"
              aria-label="Copiar enlace"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
              </svg>
            </button>
          </div>
        </div>
        <div class="flex items-center space-x-2 text-sm text-gray-500">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
          </svg>
          <span>{post.likes_count || 0} me gusta</span>
        </div>
      </div>

      <!-- Article Body -->
      <div class="prose-content">
        <Fragment set:html={post.content} />
      </div>

      <!-- Tags -->
      {post.tags && post.tags.length > 0 && (
        <div class="not-prose mt-8 pt-8 border-t border-gray-200">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Etiquetas:</h3>
          <div class="flex flex-wrap gap-2">
            {post.tags.map((tag) => (
              <span class="px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-sm hover:bg-gray-200 transition-colors cursor-pointer">
                #{tag}
              </span>
            ))}
          </div>
        </div>
      )}
    </article>

    <!-- Author Bio -->
    {post.author && (
      <section class="bg-gray-50 py-12">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="bg-white rounded-xl shadow-sm p-8">
            <div class="flex items-start space-x-6">
              {post.author.avatar_url ? (
                <img 
                  src={post.author.avatar_url} 
                  alt={post.author.full_name}
                  class="w-20 h-20 rounded-full border-4 border-gray-200"
                >
              ) : (
                <div class="w-20 h-20 bg-blue-500 rounded-full flex items-center justify-center text-white text-2xl font-bold border-4 border-gray-200">
                  {post.author.full_name.charAt(0)}
                </div>
              )}
              <div class="flex-1">
                <h3 class="text-2xl font-bold text-gray-900 mb-2">{post.author.full_name}</h3>
                <p class="text-gray-600 leading-relaxed">
                  {post.author.bio || `${post.author.full_name} es parte del equipo de expertos de MODTOK, especialistas en construcción modular y casas prefabricadas en Chile.`}
                </p>
              </div>
            </div>
          </div>
        </div>
      </section>
    )}

    <!-- Related Posts -->
    {relatedPosts && relatedPosts.length > 0 && (
      <section class="py-16 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">
            Artículos Relacionados
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {relatedPosts.map((relatedPost) => (
              <article class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow">
                <div class="relative">
                  {relatedPost.featured_image_url ? (
                    <img 
                      src={relatedPost.featured_image_url} 
                      alt={relatedPost.title}
                      class="w-full h-48 object-cover"
                    >
                  ) : (
                    <div class="w-full h-48 bg-gradient-to-br from-gray-100 to-gray-200 flex items-center justify-center">
                      <div class="text-3xl text-gray-400">📝</div>
                    </div>
                  )}
                </div>
                
                <div class="p-6">
                  <div class="flex items-center space-x-2 mb-3">
                    <time class="text-sm text-gray-500">
                      {new Date(relatedPost.published_at!).toLocaleDateString('es-CL', {
                        year: 'numeric',
                        month: 'short',
                        day: 'numeric'
                      })}
                    </time>
                    <span class="text-gray-300">•</span>
                    <span class="text-sm text-gray-500">{relatedPost.reading_time_minutes} min lectura</span>
                  </div>
                  
                  <h3 class="text-xl font-bold text-gray-900 mb-3 hover:text-blue-600 transition-colors">
                    <a href={`/blog/${relatedPost.slug}`}>{relatedPost.title}</a>
                  </h3>
                  
                  {relatedPost.excerpt && (
                    <p class="text-gray-600 mb-4 leading-relaxed">{relatedPost.excerpt.substring(0, 120)}...</p>
                  )}
                  
                  <a 
                    href={`/blog/${relatedPost.slug}`}
                    class="text-blue-600 hover:text-blue-800 font-medium text-sm"
                  >
                    Leer más →
                  </a>
                </div>
              </article>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- CTA Section -->
    <section class="py-16 bg-gradient-to-r from-blue-600 to-blue-800">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold text-white mb-4">
          ¿Te interesa la construcción modular?
        </h2>
        <p class="text-xl text-blue-100 mb-8">
          Explora nuestro catálogo de casas modulares y encuentra la solución perfecta para tu proyecto en Chile
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="/casas"
            class="inline-flex items-center px-6 py-3 bg-white text-blue-600 rounded-lg hover:bg-gray-50 transition-colors font-medium"
          >
            Ver Catálogo de Casas
            <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
          <a 
            href="/contacto"
            class="inline-flex items-center px-6 py-3 border border-white text-white rounded-lg hover:bg-white hover:text-blue-600 transition-colors font-medium"
          >
            Contactar Experto
          </a>
        </div>
      </div>
    </section>
  </main>

  <!-- Structured Data for Article -->
  <script type="application/ld+json" is:inline>
    {
      "@context": "https://schema.org",
      "@type": "BlogPosting",
      "headline": post.title,
      "description": post.excerpt || post.title,
      "image": post.featured_image_url || "https://modtok.cl/default-blog-image.jpg",
      "author": {
        "@type": "Person",
        "name": post.author?.full_name || "MODTOK"
      },
      "publisher": {
        "@type": "Organization",
        "name": "MODTOK",
        "url": "https://modtok.cl",
        "logo": {
          "@type": "ImageObject",
          "url": "https://modtok.cl/logo.png"
        }
      },
      "datePublished": post.published_at,
      "dateModified": post.updated_at,
      "mainEntityOfPage": {
        "@type": "WebPage",
        "@id": canonicalUrl
      },
      "url": canonicalUrl,
      "wordCount": post.content.replace(/<[^>]*>/g, '').split(/\s+/).length,
      "timeRequired": `PT${readingTime}M`,
      "inLanguage": "es-CL",
      "about": {
        "@type": "Thing",
        "name": "Construcción Modular en Chile"
      },
      "keywords": seoKeywords
    }
  </script>

  <!-- Social Share Scripts -->
  <script is:inline>
    const postTitle = post.title;
    const postUrl = window.location.href;
    const postDescription = post.excerpt || post.title;

    function shareOnFacebook() {
      window.open(`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(postUrl)}`, '_blank', 'width=600,height=400');
    }

    function shareOnTwitter() {
      window.open(`https://twitter.com/intent/tweet?text=${encodeURIComponent(postTitle)}&url=${encodeURIComponent(postUrl)}`, '_blank', 'width=600,height=400');
    }

    function shareOnLinkedIn() {
      window.open(`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(postUrl)}`, '_blank', 'width=600,height=400');
    }

    function shareOnWhatsApp() {
      window.open(`https://wa.me/?text=${encodeURIComponent(postTitle + ' ' + postUrl)}`, '_blank');
    }

    function copyToClipboard() {
      navigator.clipboard.writeText(postUrl).then(() => {
        alert('¡Enlace copiado al portapapeles!');
      }).catch(() => {
        // Fallback for older browsers
        const textArea = document.createElement('textarea');
        textArea.value = postUrl;
        document.body.appendChild(textArea);
        textArea.select();
        document.execCommand('copy');
        document.body.removeChild(textArea);
        alert('¡Enlace copiado al portapapeles!');
      });
    }
  </script>
</BaseLayout>

<style>
  .prose-content {
    @apply prose prose-lg max-w-none;
  }

  .prose-content h1 {
    @apply text-3xl font-bold text-gray-900 mt-8 mb-4;
  }

  .prose-content h2 {
    @apply text-2xl font-bold text-gray-900 mt-8 mb-4;
  }

  .prose-content h3 {
    @apply text-xl font-bold text-gray-900 mt-6 mb-3;
  }

  .prose-content p {
    @apply text-gray-700 leading-relaxed mb-4;
  }

  .prose-content ul,
  .prose-content ol {
    @apply mb-4 pl-6;
  }

  .prose-content li {
    @apply mb-2;
  }

  .prose-content a {
    @apply text-blue-600 hover:text-blue-800 underline;
  }

  .prose-content blockquote {
    @apply border-l-4 border-blue-500 pl-6 py-2 my-6 italic text-gray-700 bg-blue-50;
  }

  .prose-content img {
