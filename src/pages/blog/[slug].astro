                </svg>
                <span>{(post.views_count || 0) + 1} vistas</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Featured Image -->
    {post.featured_image_url && (
      <section class="py-8 bg-white">
        <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
