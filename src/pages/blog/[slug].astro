---
import { createSupabaseClient } from '@/lib/supabase';
import BaseLayout from '@/layouts/BaseLayout.astro';
import SEOHead from '@/components/SEOHead.astro';

export async function getStaticPaths() {
  const supabase = createSupabaseClient({} as any);
  const { data: posts } = await supabase
    .from('blog_posts')
    .select('slug')
    .eq('status', 'published')
    .lte('published_at', new Date().toISOString());

  return posts?.map(post => ({ params: { slug: post.slug } })) || [];
}

const { slug } = Astro.params;
const supabase = createSupabaseClient(Astro);

// Fetch the blog post
const { data: post, error } = await supabase
  .from('blog_posts')
  .select(`
    *,
    author:profiles!blog_posts_author_id_fkey(full_name, avatar_url, bio)
  `)
  .eq('slug', slug)
  .eq('status', 'published')
  .single();

if (error || !post) {
  return Astro.redirect('/404');
}

// Track view in content_views table (analytics)
if (Astro.request.headers.get('x-forwarded-for')) {
  supabase
    .from('content_views')
    .insert({
      content_type: 'blog',
      content_id: post.id,
      viewer_ip: Astro.request.headers.get('x-forwarded-for')?.split(',')[0] || null,
      viewer_country: Astro.request.headers.get('cf-ipcountry') || null,
      viewer_device: Astro.request.headers.get('user-agent') || null,
      referrer: Astro.request.headers.get('referer') || null,
    })
    .then(() => {})
    .catch(() => {});
}

// Also increment view count on post
await supabase
  .from('blog_posts')
  .update({ views_count: (post.views_count || 0) + 1 })
  .eq('id', post.id);

// Fetch related posts
const { data: relatedPosts } = await supabase
  .from('blog_posts')
  .select('id, title, slug, excerpt, featured_image_url, published_at, reading_time_minutes, category')
  .eq('status', 'published')
  .neq('id', post.id)
  .or(`category.eq.${post.category},tags.cs.{${post.tags?.slice(0, 3).map(t => `"${t}"`).join(',') || ''}}`)
  .order('published_at', { ascending: false })
  .limit(3);

// Categories for navigation
const categories = {
  'tendencias': { name: 'Tendencias', color: 'purple' },
  'guias': { name: 'Guías', color: 'blue' },
  'casos-exito': { name: 'Casos de Éxito', color: 'green' },
  'consejos': { name: 'Consejos', color: 'indigo' },
  'tutoriales': { name: 'Tutoriales', color: 'orange' }
};

// SEO data
const siteUrl = Astro.site?.href || 'https://modtok.cl';
const postUrl = `${siteUrl}/blog/${post.slug}`;
const ogImage = post.og_image_url || post.featured_image_url || '/og-default.jpg';
const readingTime = post.reading_time_minutes || 5;
const publishedDate = new Date(post.published_at!);
const formattedDate = publishedDate.toLocaleDateString('es-CL', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<BaseLayout>
  <SEOHead
    slot="head"
    title={post.meta_title || post.title}
    description={post.meta_description || post.excerpt || ''}
    type="article"
    image={ogImage}
    imageAlt={post.featured_image_alt || post.title}
    url={postUrl}
    canonical={post.canonical_url || postUrl}
    publishedTime={post.published_at || undefined}
    modifiedTime={post.updated_at}
    author={post.author_name || post.author?.full_name || 'MODTOK Editorial'}
    keywords={post.keywords || []}
  />
  <!-- Breadcrumb with accent-blue -->
  <nav class="bg-white border-b border-gray-100 py-4 sticky top-0 z-10 backdrop-blur-sm bg-white/95">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-2 text-sm">
          <a href="/" class="text-gray-500 hover:text-accent-blue transition-colors font-medium flex items-center gap-1">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
            Inicio
          </a>
          <svg class="w-4 h-4 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
          <a href="/blog" class="text-gray-500 hover:text-accent-blue transition-colors font-medium">Blog</a>
          {post.category && (
            <>
              <svg class="w-4 h-4 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
              <a
                href={`/blog/categoria/${post.category}`}
                class="text-gray-500 hover:text-accent-blue transition-colors font-medium"
              >
                {categories[post.category]?.name || post.category}
              </a>
            </>
          )}
        </div>

        <!-- Back to blog button -->
        <a href="/blog" class="hidden sm:flex items-center gap-2 text-sm text-gray-500 hover:text-accent-blue transition-colors font-medium">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Volver al Blog
        </a>
      </div>
    </div>
  </nav>

  <main class="min-h-screen bg-gray-50">
    <!-- Article Header -->
    <header class="bg-white py-12 lg:py-16 border-b border-gray-100">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <!-- Category Badge -->
          {post.category && (
            <div class="mb-6">
              <span class="inline-flex items-center gap-2 px-4 py-2 bg-accent-blue/10 text-accent-blue rounded-xl text-sm font-bold border border-accent-blue/20">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M17.707 9.293a1 1 0 010 1.414l-7 7a1 1 0 01-1.414 0l-7-7A.997.997 0 012 10V5a3 3 0 013-3h5c.256 0 .512.098.707.293l7 7zM5 6a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd"></path>
                </svg>
                {categories[post.category]?.name || post.category}
              </span>
            </div>
          )}

          <!-- Title -->
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-6 leading-tight tracking-tight">
            {post.title}
          </h1>

          <!-- Excerpt -->
          {post.excerpt && (
            <p class="text-xl md:text-2xl text-gray-600 mb-10 leading-relaxed max-w-3xl mx-auto">
              {post.excerpt}
            </p>
          )}

          <!-- Meta Information -->
          <div class="flex flex-col sm:flex-row items-center justify-center gap-6 text-gray-500">
            <div class="flex items-center gap-4">
              {post.author?.avatar_url ? (
                <img
                  src={post.author.avatar_url}
                  alt={post.author.full_name}
                  class="w-14 h-14 rounded-full border-2 border-gray-100 shadow-sm"
                >
              ) : (
                <div class="w-14 h-14 bg-gradient-to-br from-accent-blue to-accent-blue-dark rounded-full flex items-center justify-center text-white font-bold text-lg shadow-sm">
                  {post.author?.full_name?.charAt(0) || 'M'}
                </div>
              )}
              <div class="text-left">
                <p class="font-bold text-gray-900">{post.author?.full_name || 'Equipo MODTOK'}</p>
                <p class="text-sm text-gray-500">Autor</p>
              </div>
            </div>

            <div class="flex items-center gap-4 text-sm font-medium">
              <div class="flex items-center gap-1.5 text-gray-500">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <time datetime={publishedDate.toISOString()}>{formattedDate}</time>
              </div>
              <span class="text-gray-300">•</span>
              <div class="flex items-center gap-1.5 text-gray-500">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span>{readingTime} min lectura</span>
              </div>
              <span class="text-gray-300">•</span>
              <div class="flex items-center gap-1.5 text-gray-500">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
