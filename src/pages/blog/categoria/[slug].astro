---
import { createSupabaseClient } from '@/lib/supabase';
import BaseLayout from '@/layouts/BaseLayout.astro';
import SEOHead from '@/components/SEOHead.astro';

export async function getStaticPaths() {
  return [
    { params: { slug: 'tendencias' } },
    { params: { slug: 'guias' } },
    { params: { slug: 'casos_exito' } },
    { params: { slug: 'noticias' } },
    { params: { slug: 'tutoriales' } },
    { params: { slug: 'entrevistas' } },
  ];
}

const { slug } = Astro.params;
const supabase = createSupabaseClient(Astro);

const categories = {
  'tendencias': {
    name: 'Tendencias',
    description: 'Últimas tendencias en construcción modular y prefabricada en Chile',
    iconPath: 'M13 7h8m0 0v8m0-8l-8 8-4-4-6 6',
    iconViewBox: '0 0 24 24',
    gradient: 'from-purple-600 to-purple-800'
  },
  'guias': {
    name: 'Guías',
    description: 'Guías prácticas para construir tu casa modular en Chile',
    iconPath: 'M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253',
    iconViewBox: '0 0 24 24',
    gradient: 'from-accent-blue to-accent-blue-dark'
  },
  'casos_exito': {
    name: 'Casos de Éxito',
    description: 'Proyectos exitosos de casas modulares en diferentes regiones de Chile',
    iconPath: 'M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z',
    iconViewBox: '0 0 24 24',
    gradient: 'from-green-600 to-green-800'
  },
  'noticias': {
    name: 'Noticias',
    description: 'Noticias del sector de construcción modular en Chile',
    iconPath: 'M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z',
    iconViewBox: '0 0 24 24',
    gradient: 'from-red-600 to-red-800'
  },
  'tutoriales': {
    name: 'Tutoriales',
    description: 'Tutoriales paso a paso para tu proyecto de construcción modular',
    iconPath: 'M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253',
    iconViewBox: '0 0 24 24',
    gradient: 'from-orange-600 to-orange-800'
  },
  'entrevistas': {
    name: 'Entrevistas',
    description: 'Conversaciones con expertos del sector de construcción modular',
    iconPath: 'M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z',
    iconViewBox: '0 0 24 24',
    gradient: 'from-indigo-600 to-indigo-800'
  }
};

const category = categories[slug];

// Fetch posts by category
const { data: posts } = await supabase
  .from('blog_posts')
  .select(`
    *,
    author:profiles!blog_posts_author_id_fkey(full_name, avatar_url)
  `)
  .eq('category', slug)
  .eq('status', 'published')
  .lte('published_at', new Date().toISOString())
  .order('published_at', { ascending: false })
  .limit(20);

const siteUrl = Astro.site?.href || 'https://modtok.cl';
---

<BaseLayout>
  <SEOHead
    slot="head"
    title={`${category.name} - Blog de Construcción Modular en Chile`}
    description={category.description}
    type="website"
    url={`${siteUrl}blog/categoria/${slug}`}
    keywords={[`${category.name.toLowerCase()} construcción modular`, 'casas prefabricadas Chile']}
  />

  <main class="min-h-screen bg-white">
    <!-- Breadcrumb Navigation -->
    <nav class="border-b border-gray-100 bg-white sticky top-0 z-10 backdrop-blur-sm bg-white/95">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-2 text-sm text-gray-600">
            <a href="/" class="hover:text-accent-blue transition-colors inline-flex items-center">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
              </svg>
            </a>
            <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
            <a href="/blog" class="hover:text-accent-blue transition-colors">Blog</a>
            <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
            <span class="text-gray-900 font-medium">{category.name}</span>
          </div>

          <a
            href="/blog"
            class="hidden md:inline-flex items-center text-sm text-gray-600 hover:text-accent-blue transition-colors"
          >
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
            Volver al Blog
          </a>
        </div>
      </div>
    </nav>

    <!-- Hero Section -->
    <section class="bg-gradient-to-b from-gray-50 to-white py-16 lg:py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <!-- Category Icon with Border -->
          <div class="inline-flex items-center justify-center w-20 h-20 rounded-2xl bg-white border-2 border-gray-200 shadow-apple-sm mb-6">
            <svg class="w-10 h-10 text-accent-blue" fill="none" stroke="currentColor" viewBox={category.iconViewBox}>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={category.iconPath}/>
            </svg>
          </div>

          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-6 tracking-tight">{category.name}</h1>
          <p class="text-lg md:text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">{category.description}</p>

          <!-- Stats -->
          <div class="mt-8 flex items-center justify-center gap-6">
            <div class="inline-flex items-center gap-2 px-4 py-2 bg-white border-2 border-gray-200 rounded-lg shadow-apple-sm">
              <svg class="w-5 h-5 text-accent-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
              <span class="text-sm font-semibold text-gray-900">{posts?.length || 0} artículos</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Posts Grid -->
    <section class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        {posts && posts.length > 0 ? (
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {posts.map((post) => (
              <article class="group bg-white border-2 border-gray-200 rounded-lg overflow-hidden hover:border-accent-blue hover:shadow-apple-lg transition-all duration-200 hover:-translate-y-1">
                <a href={`/blog/${post.slug}`} class="block">
                  <div class="relative overflow-hidden">
                    {post.featured_image_url ? (
                      <img
                        src={post.featured_image_url}
                        alt={post.title}
                        class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-500"
                      />
                    ) : (
                      <div class="w-full h-48 bg-gradient-to-br from-gray-100 to-gray-200 flex items-center justify-center">
                        <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox={category.iconViewBox}>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={category.iconPath}/>
                        </svg>
                      </div>
                    )}
                  </div>

                  <div class="p-6">
                    <!-- Meta Info -->
                    <div class="flex items-center gap-3 mb-3">
                      <div class="flex items-center gap-1.5 text-sm text-gray-600">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                        </svg>
                        <time>
                          {new Date(post.published_at!).toLocaleDateString('es-CL', {
                            year: 'numeric',
                            month: 'short',
                            day: 'numeric'
                          })}
                        </time>
                      </div>
                      <span class="text-gray-300">•</span>
                      <div class="flex items-center gap-1.5 text-sm text-gray-600">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                        <span>{post.reading_time_minutes} min</span>
                      </div>
                    </div>

                    <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-accent-blue transition-colors line-clamp-2">
                      {post.title}
                    </h3>

                    {post.excerpt && (
                      <p class="text-gray-600 mb-4 leading-relaxed line-clamp-3">{post.excerpt}</p>
                    )}

                    <div class="flex items-center justify-between pt-4 border-t border-gray-100">
                      <div class="flex items-center gap-2">
                        {post.author?.avatar_url ? (
                          <img
                            src={post.author.avatar_url}
                            alt={post.author.full_name}
                            class="w-8 h-8 rounded-full"
                          />
                        ) : (
                          <div class="w-8 h-8 bg-gradient-to-br from-accent-blue to-accent-blue-dark rounded-full flex items-center justify-center text-white text-xs font-semibold">
                            {post.author?.full_name?.charAt(0) || 'M'}
                          </div>
                        )}
                        <span class="text-sm font-medium text-gray-700">{post.author?.full_name || 'MODTOK'}</span>
                      </div>

                      <span class="inline-flex items-center text-accent-blue font-semibold text-sm group-hover:gap-2 gap-1.5 transition-all">
                        Leer
                        <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                        </svg>
                      </span>
                    </div>
                  </div>
                </a>
              </article>
            ))}
          </div>
        ) : (
          <div class="text-center py-20 bg-white border-2 border-gray-200 rounded-lg">
            <div class="inline-flex items-center justify-center w-20 h-20 bg-gray-50 rounded-2xl mb-6">
              <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox={category.iconViewBox}>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={category.iconPath}/>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-gray-900 mb-3">No hay artículos en esta categoría aún</h3>
            <p class="text-gray-600 mb-8 max-w-md mx-auto">Pronto publicaremos contenido sobre {category.name.toLowerCase()}.</p>
            <a
              href="/blog"
              class="inline-flex items-center gap-2 px-6 py-3 bg-accent-blue text-white rounded-lg hover:bg-accent-blue-dark transition-all font-semibold shadow-apple-sm hover:shadow-apple-md hover:-translate-y-0.5 duration-200"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
              </svg>
              Ver todos los artículos
            </a>
          </div>
        )}
      </div>
    </section>

    <!-- Other Categories -->
    <section class="py-16 bg-white border-t border-gray-100">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-3">Explorar Otras Categorías</h2>
          <p class="text-gray-600">Descubre más contenido sobre construcción modular</p>
        </div>

        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          {Object.entries(categories).filter(([key]) => key !== slug).map(([key, cat]) => (
            <a
              href={`/blog/categoria/${key}`}
              class="group p-6 bg-white border-2 border-gray-200 rounded-lg hover:border-accent-blue hover:shadow-apple-md transition-all duration-200 hover:-translate-y-1"
            >
              <div class="text-center">
                <div class="inline-flex items-center justify-center w-16 h-16 bg-gray-50 rounded-xl mb-4 group-hover:bg-accent-blue-pale transition-colors">
                  <svg class="w-8 h-8 text-accent-blue" fill="none" stroke="currentColor" viewBox={cat.iconViewBox}>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={cat.iconPath}/>
                  </svg>
                </div>
                <h3 class="font-bold text-gray-900 group-hover:text-accent-blue transition-colors">{cat.name}</h3>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
