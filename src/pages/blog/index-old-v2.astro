---
import { createSupabaseClient } from '@/lib/supabase';
import BaseLayout from '@/layouts/BaseLayout.astro';
import SEOHead from '@/components/SEOHead.astro';

const supabase = createSupabaseClient(Astro);

const { data: posts, error } = await supabase
  .from('blog_posts')
  .select(`
    *,
    author:profiles!blog_posts_author_id_fkey(full_name, avatar_url)
  `)
  .eq('status', 'published')
  .lte('published_at', new Date().toISOString())
  .order('published_at', { ascending: false })
  .limit(12);

if (error) {
  console.error('Error fetching blog posts:', error);
}

// Get featured post (most recent or manually featured)
const featuredPost = posts?.[0];

// Get regular posts (excluding featured)
const regularPosts = posts?.slice(1) || [];

// Categories with Chilean context
const categories = [
  { 
    slug: 'tendencias', 
    name: 'Tendencias', 
    description: 'Últimas tendencias en construcción modular y prefabricada en Chile',
    color: 'purple'
  },
  { 
    slug: 'guias', 
    name: 'Guías', 
    description: 'Guías prácticas para construir tu casa modular en Chile',
    color: 'blue'
  },
  { 
    slug: 'casos_exito', 
    name: 'Casos de Éxito', 
    description: 'Proyectos exitosos de casas modulares en diferentes regiones de Chile',
    color: 'green'
  },
  { 
    slug: 'noticias', 
    name: 'Noticias', 
    description: 'Noticias del sector de construcción modular en Chile',
    color: 'red'
  },
  { 
    slug: 'tutoriales', 
    name: 'Tutoriales', 
    description: 'Tutoriales paso a paso para tu proyecto de construcción modular',
    color: 'orange'
  }
];

const siteUrl = Astro.site?.href || 'https://modtok.cl';
---

<BaseLayout>
  <SEOHead
    slot="head"
    title="Blog de Construcción Modular en Chile"
    description="Descubre las últimas tendencias, guías y casos de éxito en construcción modular y casas prefabricadas en Chile. Contenido especializado para el mercado chileno."
    type="website"
    url={`${siteUrl}blog`}
    keywords={['construcción modular Chile', 'casas prefabricadas Chile', 'blog construcción', 'vivienda modular']}
  />
  <main class="min-h-screen bg-gray-50">
    <!-- Hero Section with Brand Green -->
    <section class="bg-gradient-to-br from-brand-green via-green-700 to-brand-green-dark text-white py-20 relative overflow-hidden">
      <!-- Decorative elements -->
      <div class="absolute inset-0 opacity-10">
        <div class="absolute top-0 left-0 w-96 h-96 bg-white rounded-full blur-3xl"></div>
        <div class="absolute bottom-0 right-0 w-96 h-96 bg-white rounded-full blur-3xl"></div>
      </div>

      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="text-center">
          <div class="inline-flex items-center gap-2 px-4 py-2 bg-white/10 backdrop-blur-sm rounded-full mb-6 border border-white/20">
            <span class="w-2 h-2 bg-green-300 rounded-full animate-pulse"></span>
            <span class="text-sm font-medium text-green-50">Blog MODTOK</span>
          </div>

          <h1 class="text-5xl md:text-6xl font-bold mb-6 tracking-tight">
            Blog de Construcción Modular
          </h1>
          <p class="text-xl md:text-2xl text-green-50 mb-10 max-w-3xl mx-auto leading-relaxed">
            Explora las últimas tendencias, guías especializadas y casos de éxito en construcción modular en Chile.
            Contenido creado por expertos para tu proyecto de vivienda.
          </p>

          <!-- Search Bar with accent-blue focus -->
          <div class="max-w-2xl mx-auto">
            <div class="relative group">
              <input
                type="search"
                placeholder="Buscar artículos sobre casas modulares, permisos, costos..."
                class="w-full px-6 py-4 pl-14 rounded-xl text-gray-900 border-0 focus:ring-2 focus:ring-accent-blue shadow-apple-lg backdrop-blur-sm transition-all"
              >
              <div class="absolute inset-y-0 left-0 pl-5 flex items-center pointer-events-none">
                <svg class="h-6 w-6 text-gray-400 group-focus-within:text-accent-blue transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
              </div>
            </div>
            <p class="text-sm text-green-100 mt-3 text-left">
              Sugerencias: "casas modulares en chile", "permisos construcción", "financiamiento"
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Categories with Design System v2.0 -->
    <section class="py-16 bg-white border-b border-gray-100">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-3">Explora por Categorías</h2>
          <p class="text-gray-600">Encuentra el contenido que más te interesa sobre construcción modular</p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-6">
          {categories.map((category) => (
            <a
              href={`/blog/categoria/${category.slug}`}
              class="group p-6 rounded-xl border-2 border-gray-200 bg-white transition-all duration-200 hover:border-accent-blue hover:shadow-apple-md hover:-translate-y-1"
            >
              <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-accent-blue/10 to-accent-blue/5 flex items-center justify-center mb-4 group-hover:from-accent-blue/20 group-hover:to-accent-blue/10 transition-colors">
                <div class={`w-7 h-7 rounded-lg ${
                  category.color === 'purple' ? 'bg-purple-500' :
                  category.color === 'blue' ? 'bg-accent-blue' :
                  category.color === 'green' ? 'bg-brand-green' :
                  category.color === 'red' ? 'bg-red-500' :
                  category.color === 'orange' ? 'bg-orange-500' :
                  'bg-gray-500'
                }`}></div>
              </div>
              <h3 class="font-bold text-gray-900 mb-2 group-hover:text-accent-blue transition-colors">{category.name}</h3>
              <p class="text-sm text-gray-600 leading-relaxed line-clamp-2">{category.description}</p>

              <div class="flex items-center gap-1 text-accent-blue text-sm font-semibold mt-4 opacity-0 group-hover:opacity-100 transition-opacity">
                <span>Ver más</span>
                <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- Featured Post with Enhanced Visual Prominence -->
    {featuredPost && (
      <section class="py-16 bg-gradient-to-b from-gray-50 to-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex items-center gap-3 mb-8">
            <div class="flex items-center gap-2 px-3 py-1.5 bg-accent-blue/10 rounded-full border border-accent-blue/20">
              <svg class="w-4 h-4 text-accent-blue" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
              </svg>
              <span class="text-sm font-semibold text-accent-blue">Destacado</span>
            </div>
            <h2 class="text-2xl font-bold text-gray-900">Artículo Principal</h2>
          </div>

          <div class="bg-white rounded-2xl shadow-apple-lg overflow-hidden border border-gray-100 hover:shadow-apple-xl transition-shadow duration-300">
            <div class="grid grid-cols-1 lg:grid-cols-2">
              <div class="relative h-80 lg:h-auto overflow-hidden group">
                {featuredPost.featured_image_url ? (
                  <img
                    src={featuredPost.featured_image_url}
                    alt={featuredPost.title}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                  >
                ) : (
                  <div class="w-full h-full bg-gradient-to-br from-accent-blue/20 via-accent-blue/10 to-brand-green/10 flex items-center justify-center">
                    <div class="text-center text-accent-blue">
                      <div class="text-7xl mb-3">🏠</div>
                      <p class="text-base font-medium">Construcción Modular</p>
                    </div>
                  </div>
                )}
                {featuredPost.category && (
                  <div class="absolute top-6 left-6">
                    <span class="px-4 py-2 bg-white/95 backdrop-blur-sm text-accent-blue rounded-xl text-sm font-bold shadow-apple-sm border border-white/50">
                      {categories.find(c => c.slug === featuredPost.category)?.name || featuredPost.category}
                    </span>
                  </div>
                )}
              </div>

              <div class="p-8 lg:p-10 flex flex-col">
                <div class="flex items-center gap-4 mb-5">
                  <time class="text-sm font-medium text-gray-500 flex items-center gap-1.5">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                    {new Date(featuredPost.published_at!).toLocaleDateString('es-CL', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric'
                    })}
                  </time>
                  <span class="text-gray-300">•</span>
                  <span class="text-sm font-medium text-gray-500 flex items-center gap-1.5">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    {featuredPost.reading_time_minutes} min lectura
                  </span>
                </div>

                <h3 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-5 leading-tight hover:text-accent-blue transition-colors">
                  <a href={`/blog/${featuredPost.slug}`}>{featuredPost.title}</a>
                </h3>

                {featuredPost.excerpt && (
                  <p class="text-lg text-gray-600 mb-8 leading-relaxed flex-1">{featuredPost.excerpt}</p>
                )}

                <div class="flex items-center justify-between pt-6 border-t border-gray-100">
                  <div class="flex items-center gap-3">
                    {featuredPost.author?.avatar_url ? (
                      <img
                        src={featuredPost.author.avatar_url}
                        alt={featuredPost.author.full_name}
                        class="w-12 h-12 rounded-full border-2 border-gray-100"
                      >
                    ) : (
                      <div class="w-12 h-12 bg-gradient-to-br from-accent-blue to-accent-blue-dark rounded-full flex items-center justify-center text-white text-base font-bold shadow-apple-sm">
                        {featuredPost.author?.full_name?.charAt(0) || 'M'}
                      </div>
                    )}
                    <div>
                      <p class="font-bold text-gray-900">{featuredPost.author?.full_name || 'MODTOK'}</p>
                      <p class="text-sm text-gray-500">Autor</p>
                    </div>
                  </div>

                  <a
                    href={`/blog/${featuredPost.slug}`}
                    class="group inline-flex items-center gap-2 px-6 py-3 bg-accent-blue text-white rounded-xl hover:bg-accent-blue-dark hover:-translate-y-0.5 hover:shadow-apple-md transition-all duration-200 font-bold shadow-apple-sm"
                  >
                    Leer artículo
                    <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    )}

    <!-- Blog Posts Grid with Design System v2.0 -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-10">
          <div>
            <h2 class="text-3xl font-bold text-gray-900">Últimos Artículos</h2>
            <p class="text-gray-600 mt-1">Descubre nuestro contenido más reciente</p>
          </div>
          <div class="flex gap-2">
            <button class="px-4 py-2.5 border-2 border-accent-blue bg-accent-blue text-white rounded-lg hover:bg-accent-blue-dark transition-all duration-200 text-sm font-semibold shadow-apple-sm">
              Más recientes
            </button>
            <button class="px-4 py-2.5 border-2 border-gray-200 bg-white text-gray-700 rounded-lg hover:border-accent-blue hover:text-accent-blue transition-all duration-200 text-sm font-semibold">
              Más populares
            </button>
          </div>
        </div>

        {regularPosts.length > 0 ? (
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {regularPosts.map((post) => (
              <article class="group bg-white rounded-xl border-2 border-gray-200 overflow-hidden hover:border-accent-blue hover:shadow-apple-lg hover:-translate-y-1 transition-all duration-200">
                <a href={`/blog/${post.slug}`}>
                  <div class="relative overflow-hidden">
                    {post.featured_image_url ? (
                      <img
                        src={post.featured_image_url}
                        alt={post.title}
                        class="w-full h-56 object-cover group-hover:scale-105 transition-transform duration-500"
                      >
                    ) : (
                      <div class="w-full h-56 bg-gradient-to-br from-gray-100 to-gray-200 flex items-center justify-center group-hover:from-accent-blue/5 group-hover:to-accent-blue/10 transition-colors">
                        <div class="text-center text-gray-400 group-hover:text-accent-blue transition-colors">
                          <div class="text-5xl mb-2">📝</div>
                          <p class="text-xs font-medium">Artículo</p>
                        </div>
                      </div>
                    )}
                    {post.category && (
                      <div class="absolute top-4 left-4">
                        <span class="px-3 py-1.5 bg-white/95 backdrop-blur-sm text-accent-blue rounded-lg text-xs font-bold shadow-apple-sm border border-white/50">
                          {categories.find(c => c.slug === post.category)?.name || post.category}
                        </span>
                      </div>
                    )}
                  </div>

                  <div class="p-6">
                    <div class="flex items-center gap-3 mb-4">
                      <time class="text-xs font-medium text-gray-500 flex items-center gap-1">
                        <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                        {new Date(post.published_at!).toLocaleDateString('es-CL', {
                          year: 'numeric',
                          month: 'short',
                          day: 'numeric'
                        })}
                      </time>
                      <span class="text-gray-300">•</span>
                      <span class="text-xs font-medium text-gray-500 flex items-center gap-1">
                        <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        {post.reading_time_minutes} min
                      </span>
                    </div>

                    <h3 class="text-xl font-bold text-gray-900 mb-3 leading-snug group-hover:text-accent-blue transition-colors line-clamp-2">
                      {post.title}
                    </h3>

                    {post.excerpt && (
                      <p class="text-gray-600 mb-5 leading-relaxed line-clamp-3">{post.excerpt}</p>
                    )}

                    <div class="flex items-center justify-between pt-4 border-t border-gray-100">
                      <div class="flex items-center gap-2">
                        {post.author?.avatar_url ? (
                          <img
                            src={post.author.avatar_url}
                            alt={post.author.full_name}
                            class="w-9 h-9 rounded-full border-2 border-gray-100"
                          >
                        ) : (
                          <div class="w-9 h-9 bg-gradient-to-br from-accent-blue to-accent-blue-dark rounded-full flex items-center justify-center text-white text-xs font-bold">
                            {post.author?.full_name?.charAt(0) || 'M'}
                          </div>
                        )}
                        <span class="text-sm font-medium text-gray-700">{post.author?.full_name || 'MODTOK'}</span>
                      </div>

                      <div class="flex items-center gap-1.5 text-accent-blue font-bold text-sm group-hover:gap-2.5 transition-all">
                        <span>Leer</span>
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                        </svg>
                      </div>
                    </div>
                  </div>
                </a>
              </article>
            ))}
          </div>
        ) : (
          <div class="text-center py-16 bg-gradient-to-br from-gray-50 to-white rounded-2xl border-2 border-gray-200">
            <div class="text-7xl mb-5">📝</div>
            <h3 class="text-2xl font-bold text-gray-900 mb-3">Próximamente más contenido</h3>
            <p class="text-lg text-gray-600 mb-8 max-w-md mx-auto">
              Estamos preparando artículos especializados en construcción modular para Chile.
            </p>
            <a
              href="/contacto"
              class="inline-flex items-center gap-2 px-6 py-3 bg-accent-blue text-white rounded-xl hover:bg-accent-blue-dark hover:-translate-y-0.5 hover:shadow-apple-md transition-all duration-200 font-bold shadow-apple-sm"
            >
              Suscríbete para recibir notificaciones
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
              </svg>
            </a>
          </div>
        )}
      </div>
    </section>

    <!-- Newsletter Section with accent-blue -->
    <section class="py-20 bg-gradient-to-br from-accent-blue via-accent-blue to-accent-blue-dark relative overflow-hidden">
      <!-- Decorative elements -->
      <div class="absolute inset-0 opacity-10">
        <div class="absolute top-0 right-0 w-96 h-96 bg-white rounded-full blur-3xl"></div>
        <div class="absolute bottom-0 left-0 w-96 h-96 bg-white rounded-full blur-3xl"></div>
      </div>

      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-white/10 backdrop-blur-sm rounded-full mb-6 border border-white/20">
          <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
            <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
            <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
          </svg>
          <span class="text-sm font-medium text-white">Newsletter</span>
        </div>

        <h2 class="text-4xl md:text-5xl font-bold text-white mb-5 tracking-tight">
          Mantente actualizado
        </h2>
        <p class="text-xl text-white/90 mb-10 max-w-2xl mx-auto leading-relaxed">
          Recibe las últimas noticias y artículos sobre construcción modular directamente en tu correo.
          Únete a más de 1,000 profesionales y entusiastas.
        </p>

        <div class="flex flex-col sm:flex-row gap-3 max-w-lg mx-auto mb-6">
          <input
            type="email"
            placeholder="tu@email.com"
            class="flex-1 px-6 py-4 rounded-xl border-0 focus:ring-2 focus:ring-white text-gray-900 font-medium shadow-apple-lg placeholder:text-gray-400"
          >
          <button class="group px-8 py-4 bg-white text-accent-blue rounded-xl hover:bg-gray-50 hover:shadow-apple-md hover:-translate-y-0.5 transition-all duration-200 font-bold shadow-apple-sm flex items-center justify-center gap-2">
            Suscribirse
            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </button>
        </div>

        <div class="flex items-center justify-center gap-6 text-sm text-white/80">
          <div class="flex items-center gap-1.5">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
            <span>Sin spam</span>
          </div>
          <div class="flex items-center gap-1.5">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
            <span>Cancela cuando quieras</span>
          </div>
          <div class="flex items-center gap-1.5">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
            <span>1 email semanal</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Pagination -->
    <section class="py-12 bg-gray-50 border-t border-gray-200">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <nav class="flex items-center justify-between">
          <div class="flex-1 flex justify-start">
            <button
              disabled
              class="inline-flex items-center gap-2 px-5 py-2.5 border-2 border-gray-200 bg-white text-gray-400 rounded-lg font-semibold cursor-not-allowed"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
              </svg>
              Anterior
            </button>
