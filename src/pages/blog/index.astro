---
import { createSupabaseClient } from '@/lib/supabase';
import BaseLayout from '@/layouts/BaseLayout.astro';
import SEOHead from '@/components/SEOHead.astro';

const supabase = createSupabaseClient(Astro);

const { data: posts, error } = await supabase
  .from('blog_posts')
  .select(`
    *,
    author:profiles!blog_posts_author_id_fkey(full_name, avatar_url)
  `)
  .eq('status', 'published')
  .lte('published_at', new Date().toISOString())
  .order('published_at', { ascending: false })
  .limit(12);

if (error) {
  console.error('Error fetching blog posts:', error);
}

// Get featured post (most recent or manually featured)
const featuredPost = posts?.[0];

// Get regular posts (excluding featured)
const regularPosts = posts?.slice(1) || [];

// Categories - clean names without emojis
const categories = [
  {
    slug: 'tendencias',
    name: 'Tendencias',
    description: 'Últimas tendencias en construcción modular y prefabricada en Chile'
  },
  {
    slug: 'guias',
    name: 'Guías',
    description: 'Guías prácticas para construir tu casa modular en Chile'
  },
  {
    slug: 'casos_exito',
    name: 'Casos de Éxito',
    description: 'Proyectos exitosos de casas modulares en diferentes regiones de Chile'
  },
  {
    slug: 'noticias',
    name: 'Noticias',
    description: 'Noticias del sector de construcción modular en Chile'
  },
  {
    slug: 'tutoriales',
    name: 'Tutoriales',
    description: 'Tutoriales paso a paso para tu proyecto de construcción modular'
  },
  {
    slug: 'entrevistas',
    name: 'Entrevistas',
    description: 'Conversaciones con expertos del sector de construcción modular'
  }
];

const siteUrl = Astro.site?.href || 'https://modtok.cl';
---

<BaseLayout>
  <SEOHead
    slot="head"
    title="Blog de Construcción Modular en Chile"
    description="Descubre las últimas tendencias, guías y casos de éxito en construcción modular y casas prefabricadas en Chile. Contenido especializado para el mercado chileno."
    type="website"
    url={`${siteUrl}blog`}
    keywords={['construcción modular Chile', 'casas prefabricadas Chile', 'blog construcción', 'vivienda modular']}
  />

  <main class="min-h-screen bg-white">
    <!-- Hero Section - Clean & Professional -->
    <section class="bg-white border-b border-gray-200 py-16 lg:py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl">
          <div class="inline-flex items-center space-x-2 px-3 py-1 bg-gray-100 rounded-md mb-6">
            <span class="text-xs font-bold text-gray-600 uppercase tracking-wider">Blog</span>
          </div>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 text-gray-900 leading-tight">
            Blog de Construcción Modular
          </h1>
          <p class="text-xl text-gray-600 mb-8 leading-relaxed">
            Contenido experto sobre casas modulares, tendencias de la industria y guías prácticas para profesionales y entusiastas.
          </p>

          <!-- Search Bar -->
          <div class="relative">
            <input
              type="text"
              placeholder="Buscar artículos..."
              class="w-full px-5 py-3 pl-12 border border-gray-300 rounded-md text-gray-900 focus:outline-none focus:ring-2 focus:ring-accent-blue focus:border-transparent transition-all"
            />
            <svg class="absolute left-4 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </div>
        </div>
      </div>
    </section>

    <!-- Categories -->
    <section class="py-12 bg-gray-50 border-b border-gray-200">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center gap-3 overflow-x-auto pb-4 scrollbar-hide">
          <a
            href="/blog"
            class="whitespace-nowrap px-5 py-2.5 bg-accent-blue text-white rounded-md hover:bg-accent-blue-dark transition-all duration-200 text-sm font-bold"
          >
            Todas
          </a>
          {categories.map((category) => (
            <a
              href={`/blog/categoria/${category.slug}`}
              class="whitespace-nowrap px-5 py-2.5 border-2 border-gray-200 bg-white text-gray-700 rounded-md hover:border-accent-blue hover:text-accent-blue transition-all duration-200 text-sm font-bold"
            >
              {category.name}
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- Featured Post -->
    {featuredPost && (
      <section class="py-16 bg-white border-b border-gray-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex items-center gap-2 mb-6">
            <div class="w-1 h-6 bg-accent-blue rounded-full"></div>
            <h2 class="text-xl font-bold text-gray-900">Artículo Destacado</h2>
          </div>

          <a
            href={`/blog/${featuredPost.slug}`}
            class="group grid grid-cols-1 lg:grid-cols-2 gap-8 bg-white border-2 border-gray-200 rounded-md overflow-hidden hover:border-accent-blue hover:shadow-lg transition-all duration-300"
          >
            <div class="relative h-80 lg:h-auto overflow-hidden">
              {featuredPost.featured_image_url ? (
                <img
                  src={featuredPost.featured_image_url}
                  alt={featuredPost.title}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                />
              ) : (
                <div class="w-full h-full bg-gray-100"></div>
              )}
              {featuredPost.category && (
                <div class="absolute top-4 left-4">
                  <span class="px-3 py-1 bg-white text-gray-900 rounded-md text-xs font-bold border border-gray-200">
                    {categories.find(c => c.slug === featuredPost.category)?.name || featuredPost.category}
                  </span>
                </div>
              )}
            </div>

            <div class="p-8 lg:p-10 flex flex-col">
              <div class="flex items-center gap-4 mb-4 text-sm text-gray-600">
                <time>
                  {new Date(featuredPost.published_at!).toLocaleDateString('es-CL', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                  })}
                </time>
                <span class="text-gray-300">•</span>
                <span>{featuredPost.reading_time_minutes} min lectura</span>
              </div>

              <h3 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4 leading-tight group-hover:text-accent-blue transition-colors">
                {featuredPost.title}
              </h3>

              {featuredPost.excerpt && (
                <p class="text-lg text-gray-600 mb-6 leading-relaxed flex-1">{featuredPost.excerpt}</p>
              )}

              <div class="flex items-center justify-between pt-6 border-t border-gray-200">
                <div class="flex items-center gap-3">
                  {featuredPost.author?.avatar_url ? (
                    <img
                      src={featuredPost.author.avatar_url}
                      alt={featuredPost.author.full_name}
                      class="w-10 h-10 rounded-full border border-gray-200"
                    />
                  ) : (
                    <div class="w-10 h-10 bg-gray-900 rounded-full flex items-center justify-center text-white text-sm font-bold">
                      {featuredPost.author?.full_name?.charAt(0) || 'M'}
                    </div>
                  )}
                  <div>
                    <p class="font-bold text-gray-900 text-sm">{featuredPost.author?.full_name || 'MODTOK'}</p>
                  </div>
                </div>

                <div class="flex items-center gap-2 text-accent-blue font-bold text-sm">
                  <span>Leer artículo</span>
                  <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                  </svg>
                </div>
              </div>
            </div>
          </a>
        </div>
      </section>
    )}

    <!-- Blog Posts Grid -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between mb-8">
          <h2 class="text-2xl font-bold text-gray-900">Últimos Artículos</h2>
          <div class="flex gap-2">
            <button class="px-4 py-2 border-2 border-accent-blue bg-accent-blue text-white rounded-md hover:bg-accent-blue-dark transition-all text-sm font-bold">
              Recientes
            </button>
            <button class="px-4 py-2 border-2 border-gray-200 text-gray-700 rounded-md hover:border-accent-blue hover:text-accent-blue transition-all text-sm font-bold">
              Populares
            </button>
          </div>
        </div>

        {regularPosts.length > 0 ? (
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {regularPosts.map((post) => (
              <article class="group">
                <a
                  href={`/blog/${post.slug}`}
                  class="block bg-white border-2 border-gray-200 rounded-md overflow-hidden hover:border-accent-blue hover:shadow-lg transition-all duration-300"
                >
                  <div class="relative overflow-hidden">
                    {post.featured_image_url ? (
                      <img
                        src={post.featured_image_url}
                        alt={post.title}
                        class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-500"
                      />
                    ) : (
                      <div class="w-full h-48 bg-gray-100"></div>
                    )}
                    {post.category && (
                      <div class="absolute top-3 left-3">
                        <span class="px-2 py-1 bg-white text-gray-900 rounded text-xs font-bold border border-gray-200">
                          {categories.find(c => c.slug === post.category)?.name || post.category}
                        </span>
                      </div>
                    )}
                  </div>

                  <div class="p-5">
                    <div class="flex items-center gap-3 mb-3 text-xs text-gray-600">
                      <time>
                        {new Date(post.published_at!).toLocaleDateString('es-CL', {
                          year: 'numeric',
                          month: 'short',
                          day: 'numeric'
                        })}
                      </time>
                      <span class="text-gray-300">•</span>
                      <span>{post.reading_time_minutes} min</span>
                    </div>

                    <h3 class="text-lg font-bold text-gray-900 mb-2 leading-snug group-hover:text-accent-blue transition-colors line-clamp-2">
                      {post.title}
                    </h3>

                    {post.excerpt && (
                      <p class="text-sm text-gray-600 mb-4 leading-relaxed line-clamp-2">{post.excerpt}</p>
                    )}

                    <div class="flex items-center justify-between pt-4 border-t border-gray-100">
                      <div class="flex items-center gap-2">
                        {post.author?.avatar_url ? (
                          <img
                            src={post.author.avatar_url}
                            alt={post.author.full_name}
                            class="w-7 h-7 rounded-full border border-gray-200"
                          />
                        ) : (
                          <div class="w-7 h-7 bg-gray-900 rounded-full flex items-center justify-center text-white text-xs font-bold">
                            {post.author?.full_name?.charAt(0) || 'M'}
                          </div>
                        )}
                        <span class="text-xs font-medium text-gray-700">{post.author?.full_name || 'MODTOK'}</span>
                      </div>

                      <div class="flex items-center gap-1 text-accent-blue font-bold text-xs">
                        <span>Leer</span>
                        <svg class="w-3 h-3 group-hover:translate-x-0.5 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                      </div>
                    </div>
                  </div>
                </a>
              </article>
            ))}
          </div>
        ) : (
          <div class="text-center py-16 border-2 border-gray-200 rounded-md">
            <h3 class="text-xl font-bold text-gray-900 mb-2">Próximamente más contenido</h3>
            <p class="text-gray-600 mb-6">
              Estamos preparando artículos especializados en construcción modular para Chile.
            </p>
            <a
              href="/contacto"
              class="inline-flex items-center gap-2 px-6 py-3 bg-accent-blue text-white rounded-md hover:bg-accent-blue-dark transition-all font-bold"
            >
              <span>Suscríbete para recibir notificaciones</span>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
              </svg>
            </a>
          </div>
        )}
      </div>
    </section>

    <!-- Newsletter Section -->
    <section class="py-16 bg-gray-50 border-t border-gray-200">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div class="inline-flex items-center gap-2 px-3 py-1 bg-white border border-gray-200 rounded-md mb-6">
          <span class="text-xs font-bold text-gray-600 uppercase tracking-wider">Newsletter</span>
        </div>

        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Mantente actualizado
        </h2>
        <p class="text-lg text-gray-600 mb-8 max-w-2xl mx-auto">
          Recibe las últimas noticias y artículos sobre construcción modular directamente en tu correo. Únete a más de 1,000 profesionales y entusiastas.
        </p>

        <div class="flex flex-col sm:flex-row gap-3 max-w-lg mx-auto mb-6">
          <input
            type="email"
            placeholder="tu@email.com"
            class="flex-1 px-5 py-3 border border-gray-300 rounded-md text-gray-900 focus:outline-none focus:ring-2 focus:ring-accent-blue focus:border-transparent"
          />
          <button class="px-6 py-3 bg-accent-blue text-white rounded-md hover:bg-accent-blue-dark transition-all font-bold">
            Suscribirse
          </button>
        </div>

        <p class="text-sm text-gray-600">
          Sin spam. Cancela cuando quieras. 1 email semanal.
        </p>
      </div>
    </section>

    <!-- Pagination -->
    <section class="py-8 bg-white border-t border-gray-200">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <nav class="flex items-center justify-between">
          <button
            disabled
            class="inline-flex items-center gap-2 px-4 py-2 border border-gray-200 text-gray-400 rounded-md font-bold cursor-not-allowed text-sm"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            Anterior
          </button>

          <div class="hidden sm:flex items-center gap-2">
            <button class="w-9 h-9 flex items-center justify-center border-2 border-accent-blue bg-accent-blue text-white rounded-md font-bold text-sm">
              1
            </button>
            <button class="w-9 h-9 flex items-center justify-center border border-gray-200 text-gray-700 rounded-md font-bold hover:border-accent-blue hover:text-accent-blue transition-all text-sm">
              2
            </button>
            <button class="w-9 h-9 flex items-center justify-center border border-gray-200 text-gray-700 rounded-md font-bold hover:border-accent-blue hover:text-accent-blue transition-all text-sm">
              3
            </button>
            <span class="px-2 text-gray-400 text-sm">...</span>
            <button class="w-9 h-9 flex items-center justify-center border border-gray-200 text-gray-700 rounded-md font-bold hover:border-accent-blue hover:text-accent-blue transition-all text-sm">
              10
            </button>
          </div>

          <button class="inline-flex items-center gap-2 px-4 py-2 border-2 border-accent-blue bg-accent-blue text-white rounded-md hover:bg-accent-blue-dark transition-all font-bold text-sm">
            Siguiente
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </button>
        </nav>

        <div class="text-center mt-4">
          <p class="text-sm text-gray-600">
            Mostrando <span class="font-bold text-gray-900">1-12</span> de <span class="font-bold text-gray-900">120</span> artículos
          </p>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
