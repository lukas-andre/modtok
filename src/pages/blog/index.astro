          <div class="flex space-x-2">
            <button class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors text-sm">
              M√°s recientes
            </button>
            <button class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors text-sm">
              M√°s populares
            </button>
          </div>
        </div>

        {regularPosts.length > 0 ? (
