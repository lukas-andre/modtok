---
import BaseLayout from '@/layouts/BaseLayout.astro';
import ErrorBanner from '@/components/ErrorBanner.astro';
import { createSupabaseClient } from '@/lib/supabase';

const { slug } = Astro.params;

if (!slug) {
  return Astro.redirect('/?error=invalid-slug');
}

const supabase = createSupabaseClient(Astro);

// Fetch manufacturer using manufacturer_facets_effective view
const { data: fabricante, error } = await supabase
  .from('manufacturer_facets_effective')
  .select('*')
  .eq('slug', slug)
  .eq('status', 'active')
  .eq('is_manufacturer', true)
  .single();

if (error || !fabricante) {
  return Astro.redirect(`/?error=not-found&type=fabricante&slug=${slug}`);
}

// Fetch houses from this manufacturer
const { data: houses } = await supabase
  .from('houses')
  .select('id, name, slug, main_image_url, area_m2, price, topology_code, status')
  .eq('provider_id', fabricante.provider_id)
  .eq('status', 'active')
  .order('created_at', { ascending: false })
  .limit(6);

// Fetch coverage regions
const { data: coverageRegions } = await supabase
  .from('provider_coverage_regions')
  .select('region_code')
  .eq('provider_id', fabricante.provider_id);

const regions = coverageRegions?.map(cr => cr.region_code) || [];

// Format price
const formatPrice = (price: number | null) => {
  if (!price) return 'Consultar';
  return new Intl.NumberFormat('es-CL', {
    style: 'currency',
    currency: 'CLP',
    maximumFractionDigits: 0
  }).format(price);
};

// Get capabilities (from manufacturer_facets_effective view)
const capabilities = [];
if (fabricante.dise_std_eff) capabilities.push('Diseño Estándar');
if (fabricante.dise_pers_eff) capabilities.push('Diseño Personalizado');
if (fabricante.instalacion_eff) capabilities.push('Instalación');
if (fabricante.financiamiento_eff) capabilities.push('Financiamiento');
if (fabricante.llave_en_mano_eff) capabilities.push('Llave en Mano');

// Get specialties (technology types)
const specialties = [];
if (fabricante.tiny_houses_eff) specialties.push('Tiny Houses');
if (fabricante.modulares_sip_eff) specialties.push('SIP');
if (fabricante.modulares_container_eff) specialties.push('Container');
if (fabricante.modulares_hormigon_eff) specialties.push('Hormigón');
if (fabricante.modulares_madera_eff) specialties.push('Madera');

const pageTitle = `${fabricante.company_name} - Fabricante de Casas Modulares | MODTOK`;
const pageDescription = fabricante.description || `${fabricante.company_name} - Fabricante verificado de casas modulares y prefabricadas en MODTOK`;
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">

    <!-- Breadcrumb -->
    <nav class="mb-6 text-sm">
      <ol class="flex items-center space-x-2 text-gray-500">
        <li><a href="/" class="hover:text-accent-blue">Inicio</a></li>
        <li>&gt;</li>
        <li><a href="/fabricantes" class="hover:text-accent-blue">Fabricantes</a></li>
        <li>&gt;</li>
        <li class="text-gray-900 font-medium">{fabricante.company_name}</li>
      </ol>
    </nav>

    <!-- Header Section -->
    <div class="bg-white rounded-xl border border-gray-200 p-8 mb-8">
      <div class="flex flex-col md:flex-row gap-6 items-start">
        <!-- Logo -->
        <div class="flex-shrink-0">
          {fabricante.logo_url ? (
            <img
              src={fabricante.logo_url}
              alt={fabricante.company_name}
              class="w-32 h-32 rounded-xl object-cover shadow-lg"
            />
          ) : (
            <div class="w-32 h-32 rounded-xl bg-gradient-to-br from-blue-100 to-blue-200 flex items-center justify-center shadow-lg">
              <span class="text-4xl font-bold text-blue-600">
                {fabricante.company_name.charAt(0)}
              </span>
            </div>
          )}
        </div>

        <!-- Info -->
        <div class="flex-1">
          <div class="flex items-start justify-between mb-4">
            <div>
              <h1 class="text-3xl font-bold text-gray-900 mb-2">{fabricante.company_name}</h1>
              {fabricante.hq_region_code && (
                <p class="text-gray-600 mb-2">📍 {fabricante.hq_region_code}</p>
              )}
              {fabricante.has_verified && (
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                  <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  Verificado
                </span>
              )}
            </div>

            <!-- Contact Buttons -->
            <div class="flex gap-2">
              {fabricante.phone && (
                <a
                  href={`tel:${fabricante.phone}`}
                  class="inline-flex items-center px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition shadow-sm"
                >
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                  Llamar
                </a>
              )}
              {fabricante.whatsapp && (
                <a
                  href={`https://wa.me/${fabricante.whatsapp.replace(/[^0-9]/g, '')}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center px-4 py-2 bg-green-500 text-white rounded-lg hover:bg-green-600 transition shadow-sm"
                >
                  <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
                  </svg>
                  WhatsApp
                </a>
              )}
            </div>
          </div>

          {fabricante.description && (
            <p class="text-gray-700 mb-4">{fabricante.description}</p>
          )}

          <!-- Quick Stats -->
          <div class="flex flex-wrap gap-4 mt-4">
            {fabricante.house_count > 0 && (
              <div class="flex items-center gap-2 px-4 py-2 bg-blue-50 rounded-lg">
                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                </svg>
                <span class="font-semibold text-blue-900">{fabricante.house_count} Modelos</span>
              </div>
            )}
            {regions.length > 0 && (
              <div class="flex items-center gap-2 px-4 py-2 bg-green-50 rounded-lg">
                <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <span class="font-semibold text-green-900">{regions.length} Regiones</span>
              </div>
            )}
          </div>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-8">

        <!-- Capabilities -->
        {capabilities.length > 0 && (
          <div class="bg-white rounded-xl border border-gray-200 p-6">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Servicios Disponibles</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
              {capabilities.map((capability: string) => (
                <div class="flex items-center gap-3 p-3 bg-blue-50 rounded-lg">
                  <svg class="w-6 h-6 text-blue-600 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  <span class="font-medium text-blue-900">{capability}</span>
                </div>
              ))}
            </div>
          </div>
        )}

        <!-- Specialties -->
        {specialties.length > 0 && (
          <div class="bg-white rounded-xl border border-gray-200 p-6">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Especialidades</h2>
            <div class="flex flex-wrap gap-2">
              {specialties.map((specialty: string) => (
                <span class="inline-flex px-4 py-2 bg-purple-100 text-purple-800 rounded-full font-medium">
                  {specialty}
                </span>
              ))}
            </div>
          </div>
        )}

        <!-- Houses -->
        {houses && houses.length > 0 && (
          <div class="bg-white rounded-xl border border-gray-200 p-6">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Modelos Disponibles</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              {houses.map((house: any) => (
                <a
                  href={`/casas/${house.slug}`}
                  class="group block bg-white rounded-lg border border-gray-200 overflow-hidden hover:shadow-lg transition"
                >
                  {house.main_image_url ? (
                    <img
                      src={house.main_image_url}
                      alt={house.name}
                      class="w-full h-48 object-cover group-hover:scale-105 transition duration-300"
                    />
                  ) : (
                    <div class="w-full h-48 bg-gray-100 flex items-center justify-center">
                      <svg class="w-16 h-16 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                      </svg>
                    </div>
                  )}
                  <div class="p-4">
                    <h3 class="font-semibold text-gray-900 group-hover:text-accent-blue transition">
                      {house.name}
                    </h3>
                    <div class="flex items-center justify-between mt-2">
                      {house.area_m2 && (
                        <span class="text-sm text-gray-600">{house.area_m2}m²</span>
                      )}
                      <span class="font-bold text-accent-blue">{formatPrice(house.price)}</span>
                    </div>
                  </div>
                </a>
              ))}
            </div>
            {fabricante.house_count > 6 && (
              <div class="mt-6 text-center">
                <a
                  href={`/casas?fabricante=${fabricante.slug}`}
                  class="inline-flex items-center px-6 py-3 border border-accent-blue text-accent-blue rounded-lg hover:bg-accent-blue hover:text-white transition font-semibold"
                >
                  Ver Todos los Modelos
                  <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              </div>
            )}
          </div>
        )}

      </div>

      <!-- Sidebar -->
      <div class="space-y-6">

        <!-- Coverage Regions -->
        {regions.length > 0 && (
          <div class="bg-white rounded-xl border border-gray-200 p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Cobertura</h3>
            <div class="space-y-2">
              {regions.map((region: string) => (
                <div class="flex items-center gap-2 text-sm text-gray-700">
                  <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  <span>{region}</span>
                </div>
              ))}
            </div>
          </div>
        )}

        <!-- Contact Info -->
        <div class="bg-white rounded-xl border border-gray-200 p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Contacto</h3>
          <div class="space-y-3 text-sm">
            {fabricante.email && (
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-gray-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                <a href={`mailto:${fabricante.email}`} class="text-accent-blue hover:underline">
                  {fabricante.email}
                </a>
              </div>
            )}
            {fabricante.phone && (
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-gray-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <a href={`tel:${fabricante.phone}`} class="text-accent-blue hover:underline">
                  {fabricante.phone}
                </a>
              </div>
            )}
            {fabricante.website && (
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-gray-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                </svg>
                <a href={fabricante.website} target="_blank" rel="noopener noreferrer" class="text-accent-blue hover:underline">
                  Sitio Web
                </a>
              </div>
            )}
            {fabricante.address && (
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-gray-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <span class="text-gray-700">{fabricante.address}</span>
              </div>
            )}
          </div>
        </div>

        <!-- CTA -->
        <div class="bg-gradient-to-br from-accent-blue to-blue-600 rounded-xl p-6 text-white">
          <h3 class="text-lg font-semibold mb-2">¿Interesado?</h3>
          <p class="text-sm text-blue-100 mb-4">
            Solicita una cotización gratuita y sin compromiso
          </p>
          <a
            href={`#contacto`}
            class="block w-full bg-white text-accent-blue text-center py-3 rounded-lg font-semibold hover:bg-blue-50 transition shadow-sm"
          >
            Solicitar Cotización
          </a>
        </div>

      </div>
    </div>

  </div>
</BaseLayout>
