---
import { createSupabaseClient } from '@/lib/supabase';
import BaseLayout from '@/layouts/BaseLayout.astro';
import SEOHead from '@/components/SEOHead.astro';

export async function getStaticPaths() {
  const supabase = createSupabaseClient({} as any);
  const { data: posts } = await supabase
    .from('news_posts')
    .select('slug')
    .eq('status', 'published')
    .lte('published_at', new Date().toISOString())
    .or('expires_at.is.null,expires_at.gte.' + new Date().toISOString());

  return posts?.map(post => ({ params: { slug: post.slug } })) || [];
}

const { slug } = Astro.params;
const supabase = createSupabaseClient(Astro);

// Fetch the news post
const { data: post, error } = await supabase
  .from('news_posts')
  .select(`
    *,
    author:profiles!news_posts_author_id_fkey(full_name, avatar_url, bio)
  `)
  .eq('slug', slug)
  .eq('status', 'published')
  .single();

if (error || !post) {
  return Astro.redirect('/404');
}

// Track view in content_views table (analytics)
if (Astro.request.headers.get('x-forwarded-for')) {
  supabase
    .from('content_views')
    .insert({
      content_type: 'news',
      content_id: post.id,
      viewer_ip: Astro.request.headers.get('x-forwarded-for')?.split(',')[0] || null,
      viewer_country: Astro.request.headers.get('cf-ipcountry') || null,
      viewer_device: Astro.request.headers.get('user-agent') || null,
      referrer: Astro.request.headers.get('referer') || null,
    })
    .then(() => {})
    .catch(() => {});
}

// Also increment view count on post
await supabase
  .from('news_posts')
  .update({ views_count: (post.views_count || 0) + 1 })
  .eq('id', post.id);

// Fetch related news
const { data: relatedNews } = await supabase
  .from('news_posts')
  .select('id, title, slug, summary, featured_image_url, published_at, reading_time_minutes, news_type, is_breaking')
  .eq('status', 'published')
  .neq('id', post.id)
  .or(`news_type.eq.${post.news_type},tags.cs.{${post.tags?.slice(0, 3).map(t => `"${t}"`).join(',') || ''}}`)
  .order('published_at', { ascending: false })
  .limit(3);

// News types for navigation
const newsTypes = {
  'industria': { name: 'Industria', color: 'blue' },
  'empresa': { name: 'Empresa', color: 'green' },
  'producto': { name: 'Producto', color: 'purple' },
  'evento': { name: 'Evento', color: 'orange' },
  'normativa': { name: 'Normativa', color: 'red' }
};

// SEO data
const siteUrl = Astro.site?.href || 'https://modtok.cl';
const postUrl = `${siteUrl}/noticias/${post.slug}`;
const ogImage = post.og_image_url || post.featured_image_url || '/og-default.jpg';
const readingTime = post.reading_time_minutes || 3;
const publishedDate = new Date(post.published_at!);
const formattedDate = publishedDate.toLocaleDateString('es-CL', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
  hour: '2-digit',
  minute: '2-digit'
});
---

<BaseLayout>
  <SEOHead
    slot="head"
    title={post.meta_title || post.title}
    description={post.meta_description || post.summary || ''}
    type="article"
    image={ogImage}
    imageAlt={post.featured_image_alt || post.title}
    url={postUrl}
    canonical={post.canonical_url || postUrl}
    publishedTime={post.published_at || undefined}
    modifiedTime={post.updated_at}
    author={post.author_name || post.author?.full_name || 'MODTOK Editorial'}
    keywords={post.keywords || []}
  />

  <!-- Breadcrumb -->
  <nav class="bg-gray-50 border-b border-gray-200 py-4">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center space-x-2 text-sm">
        <a href="/" class="text-gray-500 hover:text-blue-600">Inicio</a>
        <span class="text-gray-400">/</span>
        <a href="/noticias" class="text-gray-500 hover:text-blue-600">Noticias</a>
        {post.news_type && (
          <>
            <span class="text-gray-400">/</span>
            <span class="text-gray-500 capitalize">
              {newsTypes[post.news_type]?.name || post.news_type}
            </span>
          </>
        )}
        <span class="text-gray-400">/</span>
        <span class="text-gray-900 font-medium truncate">{post.title}</span>
      </div>
    </div>
  </nav>

  <main class="min-h-screen bg-white">
    <!-- Article Header -->
    <header class="bg-white py-8 lg:py-12">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <!-- Breaking Badge & Type Badge -->
          <div class="mb-6 flex justify-center gap-2">
            {post.is_breaking && (
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-bold bg-red-600 text-white animate-pulse">
                ðŸ”´ URGENTE
              </span>
            )}
            {post.news_type && (
              <span class={`inline-flex items-center px-3 py-1 rounded-full text-sm font-medium ${
                newsTypes[post.news_type]?.color === 'blue' ? 'bg-blue-100 text-blue-800' :
                newsTypes[post.news_type]?.color === 'green' ? 'bg-green-100 text-green-800' :
                newsTypes[post.news_type]?.color === 'purple' ? 'bg-purple-100 text-purple-800' :
                newsTypes[post.news_type]?.color === 'red' ? 'bg-red-100 text-red-800' :
                newsTypes[post.news_type]?.color === 'orange' ? 'bg-orange-100 text-orange-800' :
                'bg-gray-100 text-gray-800'
              }`}>
                {newsTypes[post.news_type]?.name || post.news_type}
              </span>
            )}
          </div>

          <!-- Title -->
          <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-6 leading-tight">
            {post.title}
          </h1>

          <!-- Summary -->
          {post.summary && (
            <p class="text-xl text-gray-600 mb-8 leading-relaxed max-w-3xl mx-auto">
              {post.summary}
            </p>
          )}

          <!-- Meta Information -->
          <div class="flex flex-col sm:flex-row items-center justify-center space-y-4 sm:space-y-0 sm:space-x-6 text-gray-500">
            <div class="flex items-center space-x-3">
              {post.author?.avatar_url ? (
                <img
                  src={post.author.avatar_url}
                  alt={post.author.full_name}
                  class="w-10 h-10 rounded-full border-2 border-gray-200"
                />
              ) : (
                <div class="w-10 h-10 bg-blue-500 rounded-full flex items-center justify-center text-white font-semibold text-sm">
                  {post.author?.full_name?.charAt(0) || 'M'}
                </div>
              )}
              <span class="font-medium text-gray-900">{post.author?.full_name || 'MODTOK'}</span>
            </div>

            <div class="flex items-center space-x-4 text-sm">
              <div class="flex items-center space-x-1">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <time datetime={publishedDate.toISOString()}>{formattedDate}</time>
              </div>
              <div class="flex items-center space-x-1">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span>{readingTime} min lectura</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Featured Image -->
    {post.featured_image_url && (
      <section class="mb-8 lg:mb-12">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
          <img
            src={post.featured_image_url}
            alt={post.featured_image_alt || post.title}
            class="w-full h-96 lg:h-[500px] object-cover rounded-xl shadow-lg"
          />
        </div>
      </section>
    )}

    <!-- Article Content -->
    <article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 mb-12">
      <!-- Social Share Buttons -->
      <div class="flex items-center justify-between border-y border-gray-200 py-4 mb-8">
        <div class="flex items-center space-x-4">
          <span class="text-sm font-medium text-gray-700">Compartir:</span>
          <div class="flex space-x-2">
            <button
              onclick="shareOnFacebook()"
              class="p-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors"
              aria-label="Compartir en Facebook"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </button>
            <button
              onclick="shareOnTwitter()"
              class="p-2 bg-blue-400 text-white rounded-lg hover:bg-blue-500 transition-colors"
              aria-label="Compartir en Twitter"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
              </svg>
            </button>
            <button
              onclick="shareOnLinkedIn()"
              class="p-2 bg-blue-700 text-white rounded-lg hover:bg-blue-800 transition-colors"
              aria-label="Compartir en LinkedIn"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </button>
            <button
              onclick="shareOnWhatsApp()"
              class="p-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors"
              aria-label="Compartir en WhatsApp"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.89 3.488"/>
              </svg>
            </button>
          </div>
        </div>
      </div>

      <!-- Article Body -->
      <div class="prose prose-lg max-w-none prose-headings:font-bold prose-headings:text-gray-900
                  prose-p:text-gray-700 prose-p:leading-relaxed
                  prose-a:text-blue-600 prose-a:no-underline hover:prose-a:underline
                  prose-img:rounded-lg prose-img:shadow-md"
           set:html={post.content} />

      <!-- Tags -->
      {post.tags && post.tags.length > 0 && (
        <div class="mt-8 pt-8 border-t border-gray-200">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Etiquetas:</h3>
          <div class="flex flex-wrap gap-2">
            {post.tags.map((tag) => (
              <a
                href={`/noticias?tag=${encodeURIComponent(tag)}`}
                class="px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-sm hover:bg-gray-200 transition-colors"
              >
                #{tag}
              </a>
            ))}
          </div>
        </div>
      )}

      <!-- Expiration Notice -->
      {post.expires_at && new Date(post.expires_at) > new Date() && (
        <div class="mt-8 p-4 bg-yellow-50 border-l-4 border-yellow-400 text-yellow-800">
          <p class="text-sm">
            <strong>Nota:</strong> Esta noticia tiene vigencia hasta el {new Date(post.expires_at).toLocaleDateString('es-CL', { year: 'numeric', month: 'long', day: 'numeric' })}.
          </p>
        </div>
      )}
    </article>

    <!-- Related News -->
    {relatedNews && relatedNews.length > 0 && (
      <section class="py-16 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">
            Noticias Relacionadas
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {relatedNews.map((news) => (
              <article class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow">
                {news.is_breaking && (
                  <div class="bg-red-600 text-white text-xs font-bold px-3 py-1 text-center">
                    ðŸ”´ URGENTE
                  </div>
                )}

                <div class="relative">
                  {news.featured_image_url ? (
                    <img
                      src={news.featured_image_url}
                      alt={news.title}
                      class="w-full h-48 object-cover"
                    />
                  ) : (
                    <div class="w-full h-48 bg-gradient-to-br from-blue-100 to-blue-200 flex items-center justify-center">
                      <div class="text-3xl">ðŸ“°</div>
                    </div>
                  )}
                </div>

                <div class="p-6">
                  <div class="flex items-center space-x-2 mb-3">
                    <time class="text-sm text-gray-500">
                      {new Date(news.published_at!).toLocaleDateString('es-CL', {
                        year: 'numeric',
                        month: 'short',
                        day: 'numeric'
                      })}
                    </time>
                    <span class="text-gray-300">â€¢</span>
                    <span class="text-sm text-gray-500">{news.reading_time_minutes} min</span>
                  </div>

                  <h3 class="text-xl font-bold text-gray-900 mb-3 hover:text-blue-600 transition-colors">
                    <a href={`/noticias/${news.slug}`}>{news.title}</a>
                  </h3>

                  {news.summary && (
                    <p class="text-gray-600 mb-4 leading-relaxed">{news.summary.substring(0, 120)}...</p>
                  )}

                  <a
                    href={`/noticias/${news.slug}`}
                    class="text-blue-600 hover:text-blue-800 font-medium text-sm"
                  >
                    Leer mÃ¡s â†’
                  </a>
                </div>
              </article>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- Back to News -->
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <a
        href="/noticias"
        class="inline-flex items-center text-blue-600 hover:text-blue-700 font-medium"
      >
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Volver a Noticias
      </a>
    </div>
  </main>

  <!-- Social Share Scripts -->
  <script is:inline>
    const postTitle = document.querySelector('h1')?.textContent || '';
    const postUrl = window.location.href;

    function shareOnFacebook() {
      window.open(`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(postUrl)}`, '_blank', 'width=600,height=400');
    }

    function shareOnTwitter() {
      window.open(`https://twitter.com/intent/tweet?text=${encodeURIComponent(postTitle)}&url=${encodeURIComponent(postUrl)}`, '_blank', 'width=600,height=400');
    }

    function shareOnLinkedIn() {
      window.open(`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(postUrl)}`, '_blank', 'width=600,height=400');
    }

    function shareOnWhatsApp() {
      window.open(`https://wa.me/?text=${encodeURIComponent(postTitle + ' ' + postUrl)}`, '_blank');
    }
  </script>
</BaseLayout>
